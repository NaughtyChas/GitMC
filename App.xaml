<?xml version="1.0" encoding="UTF-8" ?>

<Application
    mc:Ignorable="d"
    x:Class="GitMC.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:converters="using:GitMC.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!--  Other merged dictionaries here  -->
            </ResourceDictionary.MergedDictionaries>
            <!--  Other app resources here  -->

            <!--  Converters  -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
            <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <converters:BoolNegationConverter x:Key="BoolNegationConverter" />
            <converters:NullToBoolConverter x:Key="NullToBoolConverter" />

            <Color x:Key="Primary">#512BD4</Color>

            <!--  Font Families for better Chinese character support  -->
            <FontFamily x:Key="AppFontFamily">Segoe UI, Microsoft YaHei, 微软雅黑, SimSun, 宋体</FontFamily>
            <FontFamily x:Key="ChineseFontFamily">ms-appx:///Fonts/HarmonyOS_Sans_Regular.ttf#HarmonyOS Sans, Microsoft YaHei, 微软雅黑, SimSun, 宋体, Segoe UI</FontFamily>

            <SolidColorBrush Color="{StaticResource Primary}" x:Key="PrimaryBrush" />
            <SolidColorBrush Color="White" x:Key="WhiteBrush" />
            <SolidColorBrush Color="Black" x:Key="BlackBrush" />

            <x:Double x:Key="AppFontSize">14</x:Double>

            <!--  Global Text Style with better Chinese font support and text rendering  -->
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}" />
                <Setter Property="UseLayoutRounding" Value="True" />
            </Style>

            <!--  Chinese-specific TextBlock style  -->
            <Style TargetType="TextBlock" x:Key="ChineseTextStyle">
                <Setter Property="FontFamily" Value="{StaticResource ChineseFontFamily}" />
                <Setter Property="FontWeight" Value="Normal" />
                <Setter Property="UseLayoutRounding" Value="True" />
            </Style>

            <!--  ComboBox font support  -->
            <Style TargetType="ComboBox" x:Key="AppComboBoxStyle">
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}" />
                <Setter Property="UseLayoutRounding" Value="True" />
            </Style>

            <!--  TextBox font support  -->
            <Style TargetType="TextBox" x:Key="AppTextBoxStyle">
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}" />
                <Setter Property="UseLayoutRounding" Value="True" />
            </Style>

            <!--  FontIcon style for better rendering  -->
            <Style TargetType="FontIcon">
                <Setter Property="UseLayoutRounding" Value="True" />
            </Style>

            <Style TargetType="TextBlock" x:Key="MyLabel">
                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}" />
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}" />
                <Setter Property="UseLayoutRounding" Value="True" />
            </Style>

            <Style TargetType="Button" x:Key="Action">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Padding" Value="14,10" />
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}" />
                <Setter Property="UseLayoutRounding" Value="True" />
            </Style>

            <Style
                BasedOn="{StaticResource Action}"
                TargetType="Button"
                x:Key="PrimaryAction">
                <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
                <Setter Property="Foreground" Value="{StaticResource WhiteBrush}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
