<?xml version="1.0" encoding="UTF-8" ?>

<Window
    mc:Ignorable="d"
    x:Class="GitMC.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="using:GitMC.Extensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TitleBar
            BackRequested="TitleBar_BackButtonClick"
            FontFamily="{StaticResource AppFontFamily}"
            Grid.Row="0"
            IsBackButtonEnabled="{Binding ElementName=ContentFrame, Path=CanGoBack}"
            IsBackButtonVisible="True"
            Title="{ext:Localize Key=Main_Title}"
            x:Name="TitleBar" />

        <NavigationView
            CompactPaneLength="48"
            FontFamily="{StaticResource AppFontFamily}"
            Grid.Row="1"
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="False"
            ItemInvoked="NavView_ItemInvoked"
            OpenPaneLength="200"
            PaneDisplayMode="Left"
            SelectionChanged="NavView_SelectionChanged"
            x:Name="NavView">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    Content="{ext:Localize Key=Nav_Home}"
                    FontFamily="{StaticResource AppFontFamily}"
                    Icon="Home"
                    Tag="Home" />
                <NavigationViewItemSeparator />
                <NavigationViewItemHeader Content="{ext:Localize Key=Nav_ManagedSaves}" FontFamily="{StaticResource AppFontFamily}" />
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <NavigationViewItem
                    Content="{ext:Localize Key=Nav_Console}"
                    FontFamily="{StaticResource AppFontFamily}"
                    Icon="Admin"
                    Tag="Console" />
                <NavigationViewItem
                    Content="{ext:Localize Key=Nav_Settings}"
                    FontFamily="{StaticResource AppFontFamily}"
                    Icon="Setting"
                    Tag="Settings" />
            </NavigationView.FooterMenuItems>
            <Frame x:Name="ContentFrame" />
        </NavigationView>
    </Grid>
</Window>
