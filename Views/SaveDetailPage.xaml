                                                            </StackPanel>

                                                            <Border
                                                                Background="{ThemeResource SystemFillColorCriticalBrush}"
                                                                CornerRadius="12"
                                                                Grid.Column="1"
                                                                Padding="8,3"
                                                                VerticalAlignment="Center">
                                                                <TextBlock
                                                                    FontSize="12"
                                                                    FontWeight="SemiBold"
