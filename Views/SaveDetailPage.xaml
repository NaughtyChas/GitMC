<?xml version="1.0" encoding="UTF-8" ?>

<Page
    Background="{ThemeResource LayerFillColorDefaultBrush}"
    mc:Ignorable="d"
    x:Class="GitMC.Views.SaveDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GitMC.Extensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:GitMC.Models"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Top Bar Section  -->
        <Grid Grid.Row="0" Margin="24,16,24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Save Icon  -->
            <Border
                Background="#E3F2FD"
                BorderBrush="#C8E6FA"
                BorderThickness="1"
                CornerRadius="8"
                Grid.Column="0"
                Height="80"
                Width="80">
                <FontIcon
                    FontSize="32"
                    Foreground="#2196F3"
                    Glyph="&#xE8B7;"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    x:Name="SaveIconFont" />
            </Border>

            <!--  Save Information  -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                <TextBlock
                    FontSize="24"
                    FontWeight="SemiBold"
                    Text="Save Name"
                    x:Name="SaveNameText" />
                <TextBlock
                    FontSize="14"
                    Foreground="Gray"
                    Margin="0,4,0,8"
                    Text="Save Path"
                    x:Name="SavePathText" />

                <!--  Info Line with Icons  -->
                <StackPanel
                    Margin="0,0,0,0"
                    Orientation="Horizontal"
                    Spacing="24">
                    <!--  Branch Count  -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image
                            Height="16"
                            Margin="0,0,8,0"
                            Source="ms-appx:///Assets/Icons/branch_grey.svg"
                            UseLayoutRounding="True"
                            VerticalAlignment="Center"
                            Width="16" />
                        <TextBlock
                            FontSize="12"
                            Foreground="Gray"
                            Text="3 branches"
                            VerticalAlignment="Center"
                            x:Name="BranchCountText" />
                    </StackPanel>

                    <!--  Commit Count  -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image
                            Height="16"
                            Margin="0,0,8,0"
                            Source="ms-appx:///Assets/Icons/commit_grey.svg"
                            UseLayoutRounding="True"
                            VerticalAlignment="Center"
                            Width="16" />
                        <TextBlock
                            FontSize="12"
                            Foreground="Gray"
                            Text="45 commits"
                            VerticalAlignment="Center"
                            x:Name="CommitCountText" />
                    </StackPanel>

                    <!--  Last Modified  -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <FontIcon
                            FontSize="16"
                            Foreground="Gray"
                            Glyph="&#xE823;"
                            Margin="0,0,8,0"
                            VerticalAlignment="Center" />
                        <TextBlock
                            FontSize="12"
                            Foreground="Gray"
                            Text="2 hours ago"
                            VerticalAlignment="Center"
                            x:Name="LastModifiedText" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!--  Status and Git Badges Section  -->
            <StackPanel
                Grid.Column="3"
                Spacing="8"
                VerticalAlignment="Center">
                <!--  Top Row: Status Badge  -->
                <Border
                    Background="#FFF4CE"
                    BorderBrush="#F7E018"
                    BorderThickness="1"
                    CornerRadius="12"
                    HorizontalAlignment="Right"
                    Padding="8,4,8,4"
                    UseLayoutRounding="True">
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="#8A6914"
                        Text="modified"
                        UseLayoutRounding="True"
                        x:Name="SaveStatusBadgeText" />
                </Border>

                <!--  Bottom Row: Git Status Badge  -->
                <StackPanel
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Spacing="8">
                    <!--  Push Badge  -->
                    <Border
                        Background="#E6F3FF"
                        BorderBrush="#0078D4"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="8,4,8,4"
                        UseLayoutRounding="True"
                        x:Name="PushStatusBadge">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <FontIcon
                                FontSize="10"
                                Foreground="#0078D4"
                                Glyph="&#xE898;"
                                Margin="0,0,4,0"
                                UseLayoutRounding="True"
                                VerticalAlignment="Center" />
                            <TextBlock
                                FontSize="10"
                                FontWeight="SemiBold"
                                Foreground="#0078D4"
                                Text="1 to push"
                                UseLayoutRounding="True"
                                VerticalAlignment="Center"
                                x:Name="PushStatusText" />
                        </StackPanel>
                    </Border>

                    <!--  Pull Badge  -->
                    <Border
                        Background="#E6F3FF"
                        BorderBrush="#0078D4"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="8,4,8,4"
                        UseLayoutRounding="True"
                        x:Name="PullStatusBadge">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <FontIcon
                                FontSize="10"
                                Foreground="#0078D4"
                                Glyph="&#xE896;"
                                Margin="0,0,4,0"
                                UseLayoutRounding="True"
                                VerticalAlignment="Center" />
                            <TextBlock
                                FontSize="10"
                                FontWeight="SemiBold"
                                Foreground="#0078D4"
                                Text="2 to pull"
                                UseLayoutRounding="True"
                                VerticalAlignment="Center"
                                x:Name="PullStatusText" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!--  Button Bar Section  -->
        <Border
            Background="White"
            BorderBrush="#E1E1E1"
            BorderThickness="1"
            CornerRadius="8"
            Grid.Row="1"
            Margin="24,0,24,12"
            Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Left Side Controls  -->
                <StackPanel
                    Grid.Column="0"
                    Orientation="Horizontal"
                    Spacing="12"
                    VerticalAlignment="Center">

                    <!--  Branch ComboBox with integrated Create Branch option  -->
                    <ComboBox
                        MinWidth="150"
                        SelectionChanged="BranchComboBox_SelectionChanged"
                        x:Name="BranchComboBox">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!--  Fetch/Pull Button  -->
                    <Grid>
                        <!--  Normal Button (when no commits to pull)  -->
                        <Button
                            Click="FetchButton_Click"
                            Visibility="Visible"
                            x:Name="FetchButton">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon
                                    FontSize="16"
                                    Glyph="&#xE895;"
                                    x:Name="FetchIcon" />
                                <TextBlock Text="Fetch remote" x:Name="FetchText" />
                            </StackPanel>
                        </Button>

                        <!--  SplitButton (when there are commits to pull)  -->
                        <SplitButton
                            Click="PullButton_Click"
                            Visibility="Collapsed"
                            x:Name="PullButton">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon
                                    FontSize="16"
                                    Glyph="&#xE896;"
                                    x:Name="PullIcon" />
                                <TextBlock Text="Pull commits" x:Name="PullText" />
                            </StackPanel>
                            <SplitButton.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem
                                        Click="FetchButton_Click"
                                        Text="Fetch remote"
                                        x:Name="FetchFromDropdown">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE895;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyout>
                            </SplitButton.Flyout>
                        </SplitButton>

                        <!--  Pull Badge  -->
                        <Border
                            Background="#FF4444"
                            CornerRadius="10"
                            HorizontalAlignment="Right"
                            Margin="0,-8,0,0"
                            MinWidth="20"
                            Padding="4,2"
                            VerticalAlignment="Top"
                            Visibility="Collapsed"
                            x:Name="PullBadge">
                            <TextBlock
                                FontSize="10"
                                FontWeight="Bold"
                                Foreground="White"
                                HorizontalAlignment="Center"
                                Text="2"
                                x:Name="PullBadgeText" />
                        </Border>
                    </Grid>

                    <!--  Push Button with Badge  -->
                    <Grid>
                        <Button
                            Click="PushButton_Click"
                            IsEnabled="False"
                            x:Name="PushButton">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE898;" />
                                <TextBlock Text="{local:Localize Key=SaveDetail_Push}" />
                            </StackPanel>
                        </Button>

                        <!--  Push Badge  -->
                        <Border
                            Background="#FF4444"
                            CornerRadius="10"
                            HorizontalAlignment="Right"
                            Margin="0,-8,0,0"
                            MinWidth="20"
                            Padding="4,2"
                            VerticalAlignment="Top"
                            Visibility="Collapsed"
                            x:Name="PushBadge">
                            <TextBlock
                                FontSize="10"
                                FontWeight="Bold"
                                Foreground="White"
                                HorizontalAlignment="Center"
                                Text="1"
                                x:Name="PushBadgeText" />
                        </Border>
                    </Grid>
                </StackPanel>

                <!--  Right Side Controls  -->
                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="8"
                    VerticalAlignment="Center">

                    <!--  Stash Button  -->
                    <Button Click="StashButton_Click" x:Name="StashButton">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon FontSize="14" Glyph="&#xE7B8;" />
                            <TextBlock FontSize="13" Text="{local:Localize Key=SaveDetail_Stash}" />
                        </StackPanel>
                    </Button>

                    <!--  Scan Button  -->
                    <Button Click="ScanButton_Click" x:Name="ScanButton">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon FontSize="14" Glyph="&#xE773;" />
                            <TextBlock FontSize="13" Text="{local:Localize Key=SaveDetail_Scan}" />
                        </StackPanel>
                    </Button>

                    <!--  Open Folder Button  -->
                    <Button
                        Click="OpenInExplorerButton_Click"
                        ToolTipService.ToolTip="{local:Localize Key=SaveDetail_OpenInExplorer}"
                        x:Name="OpenFolderButton">
                        <FontIcon FontSize="16" Glyph="&#xE8DA;" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!--  Navigation Tabs and Content Area - No Border  -->
        <Grid Grid.Row="2" Margin="24,0,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="16" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Navigation Tabs  -->
            <SelectorBar
                Grid.Row="0"
                SelectionChanged="TabSelector_SelectionChanged"
                x:Name="TabSelector">
                <SelectorBarItem
                    IsSelected="True"
                    Text="{local:Localize Key=SaveDetail_Tab_Overview}"
                    x:Name="OverviewTab">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE80F;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem Text="{local:Localize Key=SaveDetail_Tab_Files}" x:Name="FilesTab">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE8A5;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem Text="{local:Localize Key=SaveDetail_Tab_History}" x:Name="HistoryTab">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE81C;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem Text="{local:Localize Key=SaveDetail_Tab_Changes}" x:Name="ChangesTab">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE8AC;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem Text="{local:Localize Key=SaveDetail_Tab_Analytics}" x:Name="AnalyticsTab">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE9D9;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
            </SelectorBar>

            <!--  Content Area  -->
            <ScrollViewer Grid.Row="2" x:Name="ContentScrollViewer">
                <Grid>
                    <!--  Overview Tab Content  -->
                    <Grid
                        Margin="24"
                        Visibility="Visible"
                        x:Name="OverviewContent">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Row 1: Current Status Card  -->
                        <Border
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Grid.Row="0"
                            Padding="20">
                            <StackPanel Spacing="16">
                                <!--  Card Header  -->
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <FontIcon
                                        FontSize="20"
                                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                        Glyph="&#xE916;" />
                                    <TextBlock
                                        FontSize="18"
                                        FontWeight="SemiBold"
                                        Text="Current Status" />
                                </StackPanel>

                                <!--  Status InfoBar  -->
                                <InfoBar
                                    IsClosable="False"
                                    IsOpen="True"
                                    Message="All changes are committed and synchronized"
                                    Severity="Success"
                                    Title="Working tree clean"
                                    x:Name="StatusInfoBar" />

                                <!--  Branch Information  -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        FontWeight="SemiBold"
                                        Grid.Column="0"
                                        Margin="0,0,12,0"
                                        Text="Current branch:" />
                                    <TextBlock
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                        Grid.Column="1"
                                        Text="main"
                                        x:Name="CurrentBranchText" />
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!--  Row 2: Recent Commits and Remote Repository Cards  -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Recent Activity Card  -->
                            <Border
                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Grid.Column="0"
                                MinHeight="450"
                                Padding="20">
                                <StackPanel Spacing="16">
                                    <!--  Card Header with Button  -->
                                    <Grid>
                                        <StackPanel
                                            Orientation="Horizontal"
                                            Spacing="12"
                                            VerticalAlignment="Center">
                                            <FontIcon
                                                FontSize="20"
                                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                Glyph="&#xE823;" />
                                            <TextBlock
                                                FontSize="18"
                                                FontWeight="SemiBold"
                                                Text="Recent Activity" />
                                        </StackPanel>

                                        <!--  View All Button - Top Right  -->
                                        <Button
                                            Click="ViewAllCommits_Click"
                                            Content="View all commits"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center" />
                                    </Grid>

                                    <!--  Activity List with ScrollViewer  -->
                                    <ScrollViewer MaxHeight="350" VerticalScrollBarVisibility="Auto">
                                        <StackPanel Spacing="8" x:Name="RecentActivityContainer">
                                            <!--  Sample Activity 1 - Commit  -->
                                            <Border
                                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Padding="12">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0" Spacing="4">
                                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                                            <FontIcon
                                                                FontSize="12"
                                                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                                Glyph="&#xE73E;" />
                                                            <TextBlock
                                                                FontSize="14"
                                                                FontWeight="SemiBold"
                                                                Text="Built castle entrance and moat" />
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                                            <TextBlock
                                                                FontSize="12"
                                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                Text="by Player1 • 2 hours ago" />
                                                            <TextBlock
                                                                FontSize="12"
                                                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                                Text="•" />
                                                            <TextBlock
                                                                FontSize="12"
                                                                FontFamily="Consolas"
                                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                Text="a3b4c5d" />
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <Border
                                                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                                                        CornerRadius="12"
                                                        Grid.Column="1"
                                                        Padding="8,3"
                                                        VerticalAlignment="Center">
                                                        <TextBlock
                                                            FontSize="11"
                                                            FontWeight="SemiBold"
                                                            Foreground="White"
                                                            Text="8 files" />
                                                    </Border>
                                                </Grid>
                                            </Border>

                                            <!--  Sample Activity 2 - Commit  -->
                                            <Border
                                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Padding="12">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0" Spacing="4">
                                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                                            <FontIcon
                                                                FontSize="12"
                                                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                                Glyph="&#xE73E;" />
                                                            <TextBlock
                                                                FontSize="14"
                                                                FontWeight="SemiBold"
                                                                Text="Added redstone contraption in basement" />
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                                            <TextBlock
                                                                FontSize="12"
                                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                Text="by Player1 • 1 day ago" />
                                                            <TextBlock
                                                                FontSize="12"
                                                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                                Text="•" />
                                                            <TextBlock
                                                                FontSize="12"
                                                                FontFamily="Consolas"
                                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                Text="f8e9a2b" />
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <Border
                                                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                                                        CornerRadius="12"
                                                        Grid.Column="1"
                                                        Padding="8,3"
                                                        VerticalAlignment="Center">
                                                        <TextBlock
                                                            FontSize="11"
                                                            FontWeight="SemiBold"
                                                            Foreground="White"
                                                            Text="3 files" />
                                                    </Border>
                                                </Grid>
                                            </Border>

                                            <!--  Sample Activity 3 - Commit  -->
                                            <Border
                                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Padding="12">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0" Spacing="4">
                                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                                            <FontIcon
                                                                FontSize="12"
                                                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                                Glyph="&#xE73E;" />
                                                            <TextBlock
                                                                FontSize="14"
                                                                FontWeight="SemiBold"
                                                                Text="Initial world setup and spawn area" />
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                                            <TextBlock
                                                                FontSize="12"
                                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                Text="by Player1 • 3 days ago" />
                                                            <TextBlock
                                                                FontSize="12"
                                                                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                                Text="•" />
                                                            <TextBlock
                                                                FontSize="12"
                                                                FontFamily="Consolas"
                                                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                Text="1a2b3c4" />
                                                        </StackPanel>
                                                    </StackPanel>

                                                    <Border
                                                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                                                        CornerRadius="12"
                                                        Grid.Column="1"
                                                        Padding="8,3"
                                                        VerticalAlignment="Center">
                                                        <TextBlock
                                                            FontSize="11"
                                                            FontWeight="SemiBold"
                                                            Foreground="White"
                                                            Text="15 files" />
                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </StackPanel>
                                    </ScrollViewer>
                                </StackPanel>
                            </Border>

                            <!--  Remote Repository Card (Redesigned)  -->
                            <Border
                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Grid.Column="2"
                                MinHeight="450"
                                Padding="20,20,20,16">
                                <StackPanel Spacing="16">
                                    <!--  Card Header with Button  -->
                                    <Grid>
                                        <StackPanel
                                            Orientation="Horizontal"
                                            Spacing="12"
                                            VerticalAlignment="Center">
                                            <FontIcon
                                                FontSize="20"
                                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                Glyph="&#xE968;" />
                                            <TextBlock
                                                FontSize="18"
                                                FontWeight="SemiBold"
                                                Text="Remote Repository" />
                                        </StackPanel>

                                        <!--  View on GitHub Button  -->
                                        <Button
                                            Click="ViewOnGitHub_Click"
                                            HorizontalAlignment="Right"
                                            Padding="12,6"
                                            VerticalAlignment="Center"
                                            Visibility="Visible"
                                            x:Name="ViewOnGitHubButtonHeader">
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <FontIcon FontSize="14" Glyph="&#xE774;" />
                                                <TextBlock FontSize="13" Text="View on GitHub" />
                                            </StackPanel>
                                        </Button>
                                    </Grid>

                                    <!--  Not logged in to GitHub  -->
                                    <StackPanel
                                        Spacing="12"
                                        Visibility="Collapsed"
                                        x:Name="GitHubNotLoggedInPanel">
                                        <InfoBar
                                            IsClosable="False"
                                            IsOpen="True"
                                            Message="Sign in to GitHub to link or create a remote repository."
                                            Severity="Warning"
                                            Title="Not logged in to GitHub">
                                            <InfoBar.ActionButton>
                                                <Button
                                                    Click="SignInGitHub_Click"
                                                    Content="Sign in with GitHub"
                                                    HorizontalAlignment="Left" />
                                            </InfoBar.ActionButton>
                                        </InfoBar>
                                    </StackPanel>

                                    <!--  No repository linked  -->
                                    <StackPanel
                                        Spacing="12"
                                        Visibility="Collapsed"
                                        x:Name="GitHubNoRepoPanel">
                                        <InfoBar
                                            IsClosable="False"
                                            IsOpen="True"
                                            Message="You can create a new GitHub repository for this save, or link an existing one."
                                            Severity="Informational"
                                            Title="No remote repository linked" />

                                        <!--  Repository Creation Form  -->
                                        <StackPanel Spacing="12">
                                            <StackPanel Spacing="4">
                                                <TextBlock
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    Text="Repository Name" />
                                                <TextBox PlaceholderText="e.g. my-mc-save" x:Name="GitHubRepoNameBox" />
                                            </StackPanel>

                                            <StackPanel Spacing="4">
                                                <TextBlock
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    Text="Description (optional)" />
                                                <TextBox PlaceholderText="Describe your world..." x:Name="GitHubRepoDescBox" />
                                            </StackPanel>

                                            <CheckBox
                                                Content="Private repository"
                                                IsChecked="True"
                                                Margin="0,4,0,8"
                                                x:Name="GitHubRepoPrivateBox" />
                                        </StackPanel>

                                        <!--  Repository action buttons  -->
                                        <StackPanel Orientation="Horizontal" Spacing="12">
                                            <Button Click="CreateAndLinkRepo_Click" Content="Create and Link Repository" />
                                            <Button Click="LinkExistingRepo_Click" Content="Link Existing Repository" />
                                        </StackPanel>
