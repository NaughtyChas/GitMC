<?xml version="1.0" encoding="UTF-8" ?>

<Page
    Background="{ThemeResource LayerFillColorDefaultBrush}"
    mc:Ignorable="d"
    x:Class="GitMC.Views.SaveDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GitMC.Extensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:GitMC.Models"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Top Bar Section  -->
        <Grid Grid.Row="0" Margin="24,16,24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Save Icon  -->
            <Border
                Background="#E3F2FD"
                BorderBrush="#C8E6FA"
                BorderThickness="1"
                CornerRadius="8"
                Grid.Column="0"
                Height="80"
                Width="80">
                <FontIcon
                    FontSize="32"
                    Foreground="#2196F3"
                    Glyph="&#xE8B7;"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    x:Name="SaveIconFont" />
            </Border>

            <!--  Save Information  -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                <TextBlock
                    FontSize="24"
                    FontWeight="SemiBold"
                    Text="Save Name"
                    x:Name="SaveNameText" />
                <TextBlock
                    FontSize="14"
                    Foreground="Gray"
                    Margin="0,4,0,8"
                    Text="Save Path"
                    x:Name="SavePathText" />

                <!--  Info Line with Icons  -->
                <StackPanel
                    Margin="0,0,0,0"
                    Orientation="Horizontal"
                    Spacing="24">
                    <!--  Branch Count  -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image
                            Height="16"
                            Margin="0,0,8,0"
                            Source="ms-appx:///Assets/Icons/branch_grey.svg"
                            UseLayoutRounding="True"
                            VerticalAlignment="Center"
                            Width="16" />
                        <TextBlock
                            FontSize="12"
                            Foreground="Gray"
                            Text="3 branches"
                            VerticalAlignment="Center"
                            x:Name="BranchCountText" />
                    </StackPanel>

                    <!--  Commit Count  -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image
                            Height="16"
                            Margin="0,0,8,0"
                            Source="ms-appx:///Assets/Icons/commit_grey.svg"
                            UseLayoutRounding="True"
                            VerticalAlignment="Center"
                            Width="16" />
                        <TextBlock
                            FontSize="12"
                            Foreground="Gray"
                            Text="45 commits"
                            VerticalAlignment="Center"
                            x:Name="CommitCountText" />
                    </StackPanel>

                    <!--  Last Modified  -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <FontIcon
                            FontSize="16"
                            Foreground="Gray"
                            Glyph="&#xE823;"
                            Margin="0,0,8,0"
                            VerticalAlignment="Center" />
                        <TextBlock
                            FontSize="12"
                            Foreground="Gray"
                            Text="2 hours ago"
                            VerticalAlignment="Center"
                            x:Name="LastModifiedText" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!--  Status and Git Badges Section  -->
            <StackPanel
                Grid.Column="3"
                Spacing="8"
                VerticalAlignment="Center">
                <!--  Top Row: Status Badge  -->
                <Border
                    Background="#FFF4CE"
                    BorderBrush="#F7E018"
                    BorderThickness="1"
                    CornerRadius="12"
                    HorizontalAlignment="Right"
                    Padding="8,4,8,4"
                    UseLayoutRounding="True">
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="#8A6914"
                        Text="modified"
                        UseLayoutRounding="True"
                        x:Name="SaveStatusBadgeText" />
                </Border>

                <!--  Bottom Row: Git Status Badge  -->
                <StackPanel
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Spacing="8">
                    <!--  Push Badge  -->
                    <Border
                        Background="#E6F3FF"
                        BorderBrush="#0078D4"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="8,4,8,4"
                        UseLayoutRounding="True"
                        x:Name="PushStatusBadge">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <FontIcon
                                FontSize="10"
                                Foreground="#0078D4"
                                Glyph="&#xE898;"
                                Margin="0,0,4,0"
                                UseLayoutRounding="True"
                                VerticalAlignment="Center" />
                            <TextBlock
                                FontSize="10"
                                FontWeight="SemiBold"
                                Foreground="#0078D4"
                                Text="1 to push"
                                UseLayoutRounding="True"
                                VerticalAlignment="Center"
                                x:Name="PushStatusText" />
                        </StackPanel>
                    </Border>

                    <!--  Pull Badge  -->
                    <Border
                        Background="#E6F3FF"
                        BorderBrush="#0078D4"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="8,4,8,4"
                        UseLayoutRounding="True"
                        x:Name="PullStatusBadge">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <FontIcon
                                FontSize="10"
                                Foreground="#0078D4"
                                Glyph="&#xE896;"
                                Margin="0,0,4,0"
                                UseLayoutRounding="True"
                                VerticalAlignment="Center" />
                            <TextBlock
                                FontSize="10"
                                FontWeight="SemiBold"
                                Foreground="#0078D4"
                                Text="2 to pull"
                                UseLayoutRounding="True"
                                VerticalAlignment="Center"
                                x:Name="PullStatusText" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!--  Button Bar Section  -->
        <Border
            Background="White"
            BorderBrush="#E1E1E1"
            BorderThickness="1"
            CornerRadius="8"
            Grid.Row="1"
            Margin="24,0,24,12"
            Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Left Side Controls  -->
                <StackPanel
                    Grid.Column="0"
                    Orientation="Horizontal"
                    Spacing="12"
                    VerticalAlignment="Center">

                    <!--  Branch ComboBox with integrated Create Branch option  -->
                    <ComboBox
                        MinWidth="150"
                        SelectionChanged="BranchComboBox_SelectionChanged"
                        x:Name="BranchComboBox">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!--  Fetch/Pull Button  -->
                    <Grid>
                        <!--  Normal Button (when no commits to pull)  -->
                        <Button
                            Click="FetchButton_Click"
                            Visibility="Visible"
                            x:Name="FetchButton">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon
                                    FontSize="16"
                                    Glyph="&#xE895;"
                                    x:Name="FetchIcon" />
                                <TextBlock Text="Fetch remote" x:Name="FetchText" />
                            </StackPanel>
                        </Button>

                        <!--  SplitButton (when there are commits to pull)  -->
                        <SplitButton
                            Click="PullButton_Click"
                            Visibility="Collapsed"
                            x:Name="PullButton">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon
                                    FontSize="16"
                                    Glyph="&#xE896;"
                                    x:Name="PullIcon" />
                                <TextBlock Text="Pull commits" x:Name="PullText" />
                            </StackPanel>
                            <SplitButton.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem
                                        Click="FetchButton_Click"
                                        Text="Fetch remote"
                                        x:Name="FetchFromDropdown">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE895;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyout>
                            </SplitButton.Flyout>
                        </SplitButton>

                        <!--  Pull Badge  -->
                        <Border
                            Background="#FF4444"
                            CornerRadius="10"
                            HorizontalAlignment="Right"
                            Margin="0,-8,0,0"
                            MinWidth="20"
                            Padding="4,2"
                            VerticalAlignment="Top"
                            Visibility="Collapsed"
                            x:Name="PullBadge">
                            <TextBlock
                                FontSize="10"
                                FontWeight="Bold"
                                Foreground="White"
                                HorizontalAlignment="Center"
                                Text="2"
                                x:Name="PullBadgeText" />
                        </Border>
                    </Grid>

                    <!--  Push Button with Badge  -->
                    <Grid>
                        <Button
                            Click="PushButton_Click"
                            IsEnabled="False"
                            x:Name="PushButton">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE898;" />
                                <TextBlock Text="{local:Localize Key=SaveDetail_Push}" />
                            </StackPanel>
                        </Button>

                        <!--  Push Badge  -->
                        <Border
                            Background="#FF4444"
                            CornerRadius="10"
                            HorizontalAlignment="Right"
                            Margin="0,-8,0,0"
                            MinWidth="20"
                            Padding="4,2"
                            VerticalAlignment="Top"
                            Visibility="Collapsed"
                            x:Name="PushBadge">
                            <TextBlock
                                FontSize="10"
                                FontWeight="Bold"
                                Foreground="White"
                                HorizontalAlignment="Center"
                                Text="1"
                                x:Name="PushBadgeText" />
                        </Border>
                    </Grid>
                </StackPanel>

                <!--  Right Side Controls  -->
                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="8"
                    VerticalAlignment="Center">

                    <!--  Stash Button  -->
                    <Button Click="StashButton_Click" x:Name="StashButton">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon FontSize="14" Glyph="&#xE7B8;" />
                            <TextBlock FontSize="13" Text="{local:Localize Key=SaveDetail_Stash}" />
                        </StackPanel>
                    </Button>

                    <!--  Scan Button  -->
                    <Button Click="ScanButton_Click" x:Name="ScanButton">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon FontSize="14" Glyph="&#xE773;" />
                            <TextBlock FontSize="13" Text="{local:Localize Key=SaveDetail_Scan}" />
                        </StackPanel>
                    </Button>

                    <!--  Open Folder Button  -->
                    <Button
                        Click="OpenInExplorerButton_Click"
                        ToolTipService.ToolTip="{local:Localize Key=SaveDetail_OpenInExplorer}"
                        x:Name="OpenFolderButton">
                        <FontIcon FontSize="16" Glyph="&#xE8DA;" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!--  Navigation Tabs and Content Area  -->
        <Grid Grid.Row="2" Margin="24,0,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="8" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Navigation Tabs  -->
            <SelectorBar
                Grid.Row="0"
                SelectionChanged="TabSelector_SelectionChanged"
                x:Name="TabSelector">
                <SelectorBarItem
                    IsSelected="True"
                    Text="{local:Localize Key=SaveDetail_Tab_Overview}"
                    x:Name="OverviewTab">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE80F;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem Text="{local:Localize Key=SaveDetail_Tab_Files}" x:Name="FilesTab">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE8A5;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem Text="{local:Localize Key=SaveDetail_Tab_History}" x:Name="HistoryTab">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE81C;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem Text="{local:Localize Key=SaveDetail_Tab_Changes}" x:Name="ChangesTab">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE8AC;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem Text="{local:Localize Key=SaveDetail_Tab_Analytics}" x:Name="AnalyticsTab">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE9D9;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
            </SelectorBar>

            <!--  Separator Line  -->
            <Border
                Background="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                Grid.Row="1"
                Height="1"
                Margin="0,8,0,0" />

            <!--  Content Area (No ScrollViewer - content manages its own scrolling)  -->
            <Grid Grid.Row="3">
                <!--  Overview Tab Content  -->
                <ScrollViewer
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto"
                    Visibility="Visible"
                    x:Name="OverviewScrollViewer">
                    <Grid x:Name="OverviewContent">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Row 1: Current Status Card  -->
                        <Border
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Grid.Row="0"
                            Padding="20">
                            <StackPanel Spacing="16">
                                <!--  Card Header  -->
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <FontIcon
                                        FontSize="20"
                                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                        Glyph="&#xE916;" />
                                    <TextBlock
                                        FontSize="18"
                                        FontWeight="SemiBold"
                                        Text="Current Status" />
                                </StackPanel>

                                <!--  Branch Status Row  -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Branch Icon and Name  -->
                                    <StackPanel
                                        Grid.Column="0"
                                        Orientation="Horizontal"
                                        Spacing="8"
                                        VerticalAlignment="Center">
                                        <ImageIcon
                                            Height="16"
                                            Source="../Assets/Icons/branch_grey.svg"
                                            Width="16" />
                                        <TextBlock
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Text="main"
                                            x:Name="CurrentBranchDisplayText" />
                                    </StackPanel>

                                    <!--  Sync Status Badge  -->
                                    <Border
                                        Background="#E6F3FF"
                                        BorderBrush="#B3D9FF"
                                        BorderThickness="1"
                                        CornerRadius="12"
                                        Grid.Column="2"
                                        Padding="8,4"
                                        VerticalAlignment="Center"
                                        x:Name="SyncStatusBadge">
                                        <TextBlock
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Foreground="#0066CC"
                                            Text="Up to date"
                                            x:Name="SyncStatusText" />
                                    </Border>
                                </Grid>

                                <!--  Status InfoBar  -->
                                <InfoBar
                                    IsClosable="False"
                                    IsOpen="True"
                                    Message="All changes are committed and synchronized"
                                    Severity="Success"
                                    Title="Working tree clean"
                                    x:Name="StatusInfoBar" />

                                <!--  Status Grid - Two Columns with Enhanced Layout  -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Left Column: Sync & Branch Status - Enhanced with Border  -->
                                    <Border
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Grid.Column="0"
                                        Padding="12">
                                        <StackPanel Spacing="12">
                                            <!--  Section Header  -->
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon
                                                    FontSize="14"
                                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                    Glyph="&#xE895;" />
                                                <TextBlock
                                                    FontSize="13"
                                                    FontWeight="SemiBold"
                                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                    Text="Sync &amp; Branch Status" />
                                            </StackPanel>

                                            <!--  Sync Progress Section  -->
                                            <StackPanel Spacing="6">
                                                <TextBlock
                                                    FontSize="11"
                                                    FontWeight="Medium"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                    Text="Sync Progress" />
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <ProgressBar
                                                        Grid.Column="0"
                                                        Height="6"
                                                        Margin="0,0,8,0"
                                                        Value="100"
                                                        VerticalAlignment="Center"
                                                        x:Name="SyncProgressBar" />

                                                    <TextBlock
                                                        FontSize="12"
                                                        FontWeight="SemiBold"
                                                        Grid.Column="1"
                                                        Text="100%"
                                                        VerticalAlignment="Center"
                                                        x:Name="SyncProgressText" />
                                                </Grid>
                                            </StackPanel>

                                            <!--  Separator  -->
                                            <Border
                                                Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                                                Height="1"
                                                Margin="0,2" />

                                            <!--  Ahead/Behind Status Section  -->
                                            <StackPanel Spacing="6">
                                                <TextBlock
                                                    FontSize="11"
                                                    FontWeight="Medium"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                    Text="Commit Status" />
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <!--  Ahead  -->
                                                    <StackPanel
                                                        Grid.Column="0"
                                                        Orientation="Horizontal"
                                                        Spacing="4">
                                                        <TextBlock FontSize="12" Text="Ahead" />
                                                        <TextBlock
                                                            FontSize="12"
                                                            FontWeight="SemiBold"
                                                            Foreground="#22C55E"
                                                            Text="0 commits"
                                                            x:Name="AheadCommitsText" />
                                                    </StackPanel>

                                                    <!--  Behind  -->
                                                    <StackPanel
                                                        Grid.Column="1"
                                                        Orientation="Horizontal"
                                                        Spacing="4">
                                                        <TextBlock FontSize="12" Text="Behind" />
                                                        <TextBlock
                                                            FontSize="12"
                                                            FontWeight="SemiBold"
                                                            Foreground="#EF4444"
                                                            Text="0 commits"
                                                            x:Name="BehindCommitsText" />
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>

                                            <!--  Separator  -->
                                            <Border
                                                Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                                                Height="1"
                                                Margin="0,2" />

                                            <!--  Available Branches Section  -->
                                            <StackPanel Spacing="6">
                                                <TextBlock
                                                    FontSize="11"
                                                    FontWeight="Medium"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                    Text="Available Branches" />
                                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                                    <StackPanel
                                                        Orientation="Horizontal"
                                                        Spacing="4"
                                                        x:Name="BranchTagsContainer">
                                                        <Border
                                                            Background="#E6F3FF"
                                                            BorderBrush="#B3D9FF"
                                                            CornerRadius="8"
                                                            Padding="6,3">
                                                            <TextBlock
                                                                FontSize="10"
                                                                FontWeight="Medium"
                                                                Foreground="#0066CC"
                                                                Text="main" />
                                                        </Border>
                                                        <Border
                                                            Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                                            CornerRadius="8"
                                                            Padding="6,3">
                                                            <TextBlock FontSize="10" Text="feature/castle-wing" />
                                                        </Border>
                                                        <Border
                                                            Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                                            CornerRadius="8"
                                                            Padding="6,3">
                                                            <TextBlock FontSize="10" Text="hotfix/water-fix" />
                                                        </Border>
                                                    </StackPanel>
                                                </ScrollViewer>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <!--  Right Column: File Changes Breakdown - Enhanced with Border  -->
                                    <Border
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Grid.Column="2"
                                        Padding="12">
                                        <StackPanel Spacing="12">
                                            <!--  Section Header  -->
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon
                                                    FontSize="14"
                                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                    Glyph="&#xE8A7;" />
                                                <TextBlock
                                                    FontSize="13"
                                                    FontWeight="SemiBold"
                                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                    Text="File Changes Breakdown" />
                                            </StackPanel>

                                            <!--  File Types Section  -->
                                            <StackPanel Spacing="8">
                                                <TextBlock
                                                    FontSize="11"
                                                    FontWeight="Medium"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                    Text="Minecraft Data Types" />

                                                <!--  Region Chunks  -->
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        FontSize="12"
                                                        Grid.Column="0"
                                                        Text="Region Chunks"
                                                        VerticalAlignment="Center" />

                                                    <StackPanel
                                                        Grid.Column="1"
                                                        Orientation="Horizontal"
                                                        Spacing="4">
                                                        <TextBlock
                                                            FontSize="12"
                                                            FontWeight="SemiBold"
                                                            Text="2"
                                                            x:Name="RegionChunksCountText" />
                                                        <Ellipse
                                                            Fill="#3B82F6"
                                                            Height="6"
                                                            VerticalAlignment="Center"
                                                            Width="6" />
                                                    </StackPanel>
                                                </Grid>

                                                <!--  World Data  -->
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        FontSize="12"
                                                        Grid.Column="0"
                                                        Text="World Data"
                                                        VerticalAlignment="Center" />

                                                    <StackPanel
                                                        Grid.Column="1"
                                                        Orientation="Horizontal"
                                                        Spacing="4">
                                                        <TextBlock
                                                            FontSize="12"
                                                            FontWeight="SemiBold"
                                                            Text="1"
                                                            x:Name="WorldDataCountText" />
                                                        <Ellipse
                                                            Fill="#3B82F6"
                                                            Height="6"
                                                            VerticalAlignment="Center"
                                                            Width="6" />
                                                    </StackPanel>
                                                </Grid>

                                                <!--  Player Data  -->
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        FontSize="12"
                                                        Grid.Column="0"
                                                        Text="Player Data"
                                                        VerticalAlignment="Center" />

                                                    <StackPanel
                                                        Grid.Column="1"
                                                        Orientation="Horizontal"
                                                        Spacing="4">
                                                        <TextBlock
                                                            FontSize="12"
                                                            FontWeight="SemiBold"
                                                            Text="1"
                                                            x:Name="PlayerDataCountText" />
                                                        <Ellipse
                                                            Fill="#3B82F6"
                                                            Height="6"
                                                            VerticalAlignment="Center"
                                                            Width="6" />
                                                    </StackPanel>
                                                </Grid>

                                                <!--  Entity Data  -->
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        FontSize="12"
                                                        Grid.Column="0"
                                                        Text="Entity Data"
                                                        VerticalAlignment="Center" />

                                                    <StackPanel
                                                        Grid.Column="1"
                                                        Orientation="Horizontal"
                                                        Spacing="4">
                                                        <TextBlock
                                                            FontSize="12"
                                                            FontWeight="SemiBold"
                                                            Text="1"
                                                            x:Name="EntityDataCountText" />
                                                        <Ellipse
                                                            Fill="#3B82F6"
                                                            Height="6"
                                                            VerticalAlignment="Center"
                                                            Width="6" />
                                                    </StackPanel>
                                                </Grid>

                                                <!--  Structure Data  -->
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
