<?xml version="1.0" encoding="UTF-8" ?>

<Page
    Background="{ThemeResource LayerFillColorDefaultBrush}"
    mc:Ignorable="d"
    x:Class="GitMC.Views.SaveDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GitMC.Extensions"
    xmlns:models="using:GitMC.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Top Bar Section  -->
        <Grid Grid.Row="0" Margin="24,16,24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Save Icon  -->
            <Border
                Background="#E3F2FD"
                BorderBrush="#C8E6FA"
                BorderThickness="1"
                CornerRadius="8"
                Grid.Column="0"
                Height="80"
                Width="80">
                <FontIcon
                    FontSize="32"
                    Foreground="#2196F3"
                    Glyph="&#xE8B7;"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    x:Name="SaveIconFont" />
            </Border>

            <!--  Save Information  -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                <TextBlock
                    FontSize="24"
                    FontWeight="SemiBold"
                    Text="Save Name"
                    x:Name="SaveNameText" />
                <TextBlock
                    FontSize="14"
                    Foreground="Gray"
                    Margin="0,4,0,8"
                    Text="Save Path"
                    x:Name="SavePathText" />

                <!--  Info Line with Icons  -->
                <StackPanel
                    Margin="0,0,0,0"
                    Orientation="Horizontal"
                    Spacing="24">
                    <!--  Branch Count  -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image
                            Height="16"
                            Margin="0,0,8,0"
                            Source="ms-appx:///Assets/Icons/branch_grey.svg"
                            UseLayoutRounding="True"
                            VerticalAlignment="Center"
                            Width="16" />
                        <TextBlock
                            FontSize="12"
                            Foreground="Gray"
                            Text="3 branches"
                            VerticalAlignment="Center"
                            x:Name="BranchCountText" />
                    </StackPanel>

                    <!--  Commit Count  -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image
                            Height="16"
                            Margin="0,0,8,0"
                            Source="ms-appx:///Assets/Icons/commit_grey.svg"
                            UseLayoutRounding="True"
                            VerticalAlignment="Center"
                            Width="16" />
                        <TextBlock
                            FontSize="12"
                            Foreground="Gray"
                            Text="45 commits"
                            VerticalAlignment="Center"
                            x:Name="CommitCountText" />
                    </StackPanel>

                    <!--  Last Modified  -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <FontIcon
                            FontSize="16"
                            Foreground="Gray"
                            Glyph="&#xE823;"
                            Margin="0,0,8,0"
                            VerticalAlignment="Center" />
                        <TextBlock
                            FontSize="12"
                            Foreground="Gray"
                            Text="2 hours ago"
                            VerticalAlignment="Center"
                            x:Name="LastModifiedText" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!--  Status and Git Badges Section  -->
            <StackPanel
                Grid.Column="3"
                Spacing="8"
                VerticalAlignment="Center">
                <!--  Top Row: Status Badge  -->
                <Border
                    Background="#FFF4CE"
                    BorderBrush="#F7E018"
                    BorderThickness="1"
                    CornerRadius="12"
                    HorizontalAlignment="Right"
                    Padding="8,4,8,4"
                    UseLayoutRounding="True">
                    <TextBlock
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="#8A6914"
                        Text="modified"
                        UseLayoutRounding="True"
                        x:Name="SaveStatusBadgeText" />
                </Border>

                <!--  Bottom Row: Git Status Badge  -->
                <StackPanel
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Spacing="8">
                    <!--  Push Badge  -->
                    <Border
                        Background="#E6F3FF"
                        BorderBrush="#0078D4"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="8,4,8,4"
                        UseLayoutRounding="True"
                        x:Name="PushStatusBadge">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <FontIcon
                                FontSize="10"
                                Foreground="#0078D4"
                                Glyph="&#xE898;"
                                Margin="0,0,4,0"
                                UseLayoutRounding="True"
                                VerticalAlignment="Center" />
                            <TextBlock
                                FontSize="10"
                                FontWeight="SemiBold"
                                Foreground="#0078D4"
                                Text="1 to push"
                                UseLayoutRounding="True"
                                VerticalAlignment="Center"
                                x:Name="PushStatusText" />
                        </StackPanel>
                    </Border>

                    <!--  Pull Badge  -->
                    <Border
                        Background="#E6F3FF"
                        BorderBrush="#0078D4"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="8,4,8,4"
                        UseLayoutRounding="True"
                        x:Name="PullStatusBadge">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <FontIcon
                                FontSize="10"
                                Foreground="#0078D4"
                                Glyph="&#xE896;"
                                Margin="0,0,4,0"
                                UseLayoutRounding="True"
                                VerticalAlignment="Center" />
                            <TextBlock
                                FontSize="10"
                                FontWeight="SemiBold"
                                Foreground="#0078D4"
                                Text="2 to pull"
                                UseLayoutRounding="True"
                                VerticalAlignment="Center"
                                x:Name="PullStatusText" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!--  Button Bar Section  -->
        <Border
            Background="White"
            BorderBrush="#E1E1E1"
            BorderThickness="1"
            CornerRadius="8"
            Grid.Row="1"
            Margin="24,0,24,12"
            Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Left Side Controls  -->
                <StackPanel
                    Grid.Column="0"
                    Orientation="Horizontal"
                    Spacing="12"
                    VerticalAlignment="Center">

                    <!--  Branch ComboBox with integrated Create Branch option  -->
                    <ComboBox
                        MinWidth="150"
                        SelectionChanged="BranchComboBox_SelectionChanged"
                        x:Name="BranchComboBox">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!--  Fetch/Pull Button  -->
                    <Grid>
                        <!--  Normal Button (when no commits to pull)  -->
                        <Button
                            Click="FetchButton_Click"
                            Visibility="Visible"
                            x:Name="FetchButton">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon
                                    FontSize="16"
                                    Glyph="&#xE895;"
                                    x:Name="FetchIcon" />
                                <TextBlock Text="Fetch remote" x:Name="FetchText" />
                            </StackPanel>
                        </Button>

                        <!--  SplitButton (when there are commits to pull)  -->
                        <SplitButton
                            Click="PullButton_Click"
                            Visibility="Collapsed"
                            x:Name="PullButton">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon
                                    FontSize="16"
                                    Glyph="&#xE896;"
                                    x:Name="PullIcon" />
                                <TextBlock Text="Pull commits" x:Name="PullText" />
                            </StackPanel>
                            <SplitButton.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem
                                        Click="FetchButton_Click"
                                        Text="Fetch remote"
                                        x:Name="FetchFromDropdown">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE895;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyout>
                            </SplitButton.Flyout>
                        </SplitButton>

                        <!--  Pull Badge  -->
                        <Border
                            Background="#FF4444"
                            CornerRadius="10"
                            HorizontalAlignment="Right"
                            Margin="0,-8,0,0"
                            MinWidth="20"
                            Padding="4,2"
                            VerticalAlignment="Top"
                            Visibility="Collapsed"
                            x:Name="PullBadge">
                            <TextBlock
                                FontSize="10"
                                FontWeight="Bold"
                                Foreground="White"
                                HorizontalAlignment="Center"
                                Text="2"
                                x:Name="PullBadgeText" />
                        </Border>
                    </Grid>

                    <!--  Push Button with Badge  -->
                    <Grid>
                        <Button
                            Click="PushButton_Click"
                            IsEnabled="False"
                            x:Name="PushButton">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE898;" />
                                <TextBlock Text="{local:Localize Key=SaveDetail_Push}" />
                            </StackPanel>
                        </Button>

                        <!--  Push Badge  -->
                        <Border
                            Background="#FF4444"
                            CornerRadius="10"
                            HorizontalAlignment="Right"
                            Margin="0,-8,0,0"
                            MinWidth="20"
                            Padding="4,2"
                            VerticalAlignment="Top"
                            Visibility="Collapsed"
                            x:Name="PushBadge">
                            <TextBlock
                                FontSize="10"
                                FontWeight="Bold"
                                Foreground="White"
                                HorizontalAlignment="Center"
                                Text="1"
                                x:Name="PushBadgeText" />
                        </Border>
                    </Grid>
                </StackPanel>

                <!--  Right Side Controls  -->
                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="8"
                    VerticalAlignment="Center">

                    <!--  Stash Button  -->
                    <Button
                        Click="StashButton_Click"
                        x:Name="StashButton">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon FontSize="14" Glyph="&#xE7B8;" />
                            <TextBlock FontSize="13" Text="{local:Localize Key=SaveDetail_Stash}" />
                        </StackPanel>
                    </Button>

                    <!--  Scan Button  -->
                    <Button
                        Click="ScanButton_Click"
                        x:Name="ScanButton">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon FontSize="14" Glyph="&#xE773;" />
                            <TextBlock FontSize="13" Text="{local:Localize Key=SaveDetail_Scan}" />
                        </StackPanel>
                    </Button>

                    <!--  Open Folder Button  -->
                    <Button
                        Click="OpenInExplorerButton_Click"
                        ToolTipService.ToolTip="{local:Localize Key=SaveDetail_OpenInExplorer}"
                        x:Name="OpenFolderButton">
                        <FontIcon FontSize="16" Glyph="&#xE8DA;" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!--  Navigation Tabs and Content Area - No Border  -->
        <Grid Grid.Row="2" Margin="24,0,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="16" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Navigation Tabs  -->
            <SelectorBar
                Grid.Row="0"
                SelectionChanged="TabSelector_SelectionChanged"
                x:Name="TabSelector">
                <SelectorBarItem
                    IsSelected="True"
                    Text="{local:Localize Key=SaveDetail_Tab_Overview}"
                    x:Name="OverviewTab">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE80F;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem Text="{local:Localize Key=SaveDetail_Tab_Files}" x:Name="FilesTab">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE8A5;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem Text="{local:Localize Key=SaveDetail_Tab_History}" x:Name="HistoryTab">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE81C;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem Text="{local:Localize Key=SaveDetail_Tab_Changes}" x:Name="ChangesTab">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE8AC;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem Text="{local:Localize Key=SaveDetail_Tab_Analytics}" x:Name="AnalyticsTab">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE9D9;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
            </SelectorBar>

            <!--  Content Area  -->
            <ScrollViewer Grid.Row="2" x:Name="ContentScrollViewer">
                <Grid>
                    <!--  Overview Tab Content  -->
                    <Grid x:Name="OverviewContent" Visibility="Visible" Margin="24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Row 1: Current Status Card  -->
                        <Border
                            Grid.Row="0"
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="20">
                            <StackPanel Spacing="16">
                                <!--  Card Header  -->
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <FontIcon
                                        Glyph="&#xE916;"
                                        FontSize="20"
                                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                                    <TextBlock
                                        Text="Current Status"
                                        FontSize="18"
                                        FontWeight="SemiBold" />
                                </StackPanel>

                                <!--  Status InfoBar  -->
                                <InfoBar
                                    x:Name="StatusInfoBar"
                                    Title="Working tree clean"
                                    Message="All changes are committed and synchronized"
                                    Severity="Success"
                                    IsOpen="True"
                                    IsClosable="False" />

                                <!--  Branch Information  -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Text="Current branch:"
                                        FontWeight="SemiBold"
                                        Margin="0,0,12,0" />
                                    <TextBlock
                                        Grid.Column="1"
                                        x:Name="CurrentBranchText"
                                        Text="main"
                                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                        FontWeight="SemiBold" />
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!--  Row 2: Recent Commits and Remote Repository Cards  -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Recent Commits Card  -->
                            <Border
                                Grid.Column="0"
                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20">
                                <StackPanel Spacing="16">
                                    <!--  Card Header  -->
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <FontIcon
                                            Glyph="&#xE81C;"
                                            FontSize="20"
                                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                                        <TextBlock
                                            Text="Recent Commits"
                                            FontSize="18"
                                            FontWeight="SemiBold" />
                                    </StackPanel>

                                    <!--  Commits List  -->
                                    <ListView
                                        ItemsSource="{x:Bind ViewModel.RecentCommits, Mode=OneWay}"
                                        MaxHeight="280"
                                        SelectionMode="None"
                                        x:Name="RecentCommitsList"
                                        Background="Transparent"
                                        BorderThickness="0">
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="Padding" Value="0,8" />
                                                <Setter Property="Margin" Value="0" />
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                        <ListView.ItemTemplate>
                                            <DataTemplate x:DataType="models:CommitInfo">
                                                <Border
                                                    Background="{ThemeResource SubtleFillColorTransparentBrush}"
                                                    BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                                    BorderThickness="0,0,0,1"
                                                    Padding="12"
                                                    CornerRadius="4">
                                                    <StackPanel Spacing="6">
                                                        <TextBlock
                                                            Text="{x:Bind Message}"
                                                            FontWeight="Medium"
                                                            TextTrimming="CharacterEllipsis"
                                                            MaxLines="2" />
                                                        <StackPanel Orientation="Horizontal" Spacing="16">
                                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                                <FontIcon
                                                                    Glyph="&#xE77B;"
                                                                    FontSize="12"
                                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                                                <TextBlock
                                                                    Text="{x:Bind Author}"
                                                                    FontSize="12"
                                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                                <FontIcon
                                                                    Glyph="&#xE917;"
                                                                    FontSize="12"
                                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                                                <TextBlock
                                                                    Text="{x:Bind TimeAgo}"
                                                                    FontSize="12"
                                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>

                                    <!--  View All Link  -->
                                    <HyperlinkButton
                                        Content="View all commits"
                                        Click="ViewAllCommits_Click"
                                        HorizontalAlignment="Left" />
                                </StackPanel>
                            </Border>

                            <!--  Remote Repository Card (Redesigned)  -->
                            <Border
                                Grid.Column="2"
                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20">
                                <StackPanel Spacing="16">
                                    <!--  Card Header  -->
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <FontIcon
                                            Glyph="&#xE968;"
                                            FontSize="20"
                                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                                        <TextBlock
                                            Text="Remote Repository"
                                            FontSize="18"
                                            FontWeight="SemiBold" />
                                    </StackPanel>

                                    <!--  Not logged in to GitHub -->
                                    <StackPanel x:Name="GitHubNotLoggedInPanel" Spacing="12" Visibility="Collapsed">
                                        <InfoBar Severity="Warning" IsOpen="True" Title="Not logged in to GitHub" IsClosable="False" Message="Sign in to GitHub to link or create a remote repository.">
                                            <InfoBar.ActionButton>
                                                <Button Content="Sign in with GitHub"
                                                    Click="SignInGitHub_Click"
                                                    HorizontalAlignment="Left" />
                                            </InfoBar.ActionButton>
                                        </InfoBar>
                                    </StackPanel>

                                    <!--  No repository linked -->
                                    <StackPanel x:Name="GitHubNoRepoPanel" Spacing="12" Visibility="Collapsed">
                                        <InfoBar Severity="Informational" IsOpen="True" Title="No remote repository linked" Message="You can create a new GitHub repository for this save, or link an existing one." />
                                        <TextBlock Text="Repository Name" FontWeight="SemiBold" />
                                        <TextBox x:Name="GitHubRepoNameBox" PlaceholderText="e.g. my-mc-save" />
                                        <TextBlock Text="Description (optional)" FontWeight="SemiBold" />
                                        <TextBox x:Name="GitHubRepoDescBox" PlaceholderText="Describe your world..." />
                                        <StackPanel Orientation="Horizontal" Spacing="12">
                                            <CheckBox x:Name="GitHubRepoPrivateBox" Content="Private" IsChecked="True" />
                                            <Button Content="Create and Link Repository" Click="CreateAndLinkRepo_Click" />
                                        </StackPanel>
                                        <Button Content="Link Existing Repository" Click="LinkExistingRepo_Click" />
                                    </StackPanel>

                                    <!--  Repository linked -->
                                    <StackPanel x:Name="GitHubRepoLinkedPanel" Spacing="12" Visibility="Collapsed">
                                        <InfoBar Severity="Success" IsOpen="True" Title="Repository linked" Message="This save is linked to a GitHub repository." />
                                        <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                            <Image x:Name="GitHubAvatar" Width="32" Height="32" Stretch="UniformToFill" Margin="0,0,8,0" />
                                            <TextBlock x:Name="GitHubUserNameText" FontWeight="SemiBold" />
                                            <TextBlock Text="/" />
                                            <HyperlinkButton x:Name="GitHubRepoLink" Content="repo" NavigateUri="https://github.com/" />
                                        </StackPanel>
                                        <TextBlock x:Name="GitHubRepoDescText" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap" />
                                        <StackPanel Orientation="Horizontal" Spacing="16">
                                            <StackPanel>
                                                <TextBlock Text="Visibility" FontWeight="SemiBold" />
                                                <TextBlock x:Name="GitHubRepoVisibilityText" />
                                            </StackPanel>
                                            <StackPanel>
                                                <TextBlock Text="Default Branch" FontWeight="SemiBold" />
                                                <TextBlock x:Name="GitHubRepoBranchText" />
                                            </StackPanel>
                                        </StackPanel>
                                        <TextBlock Text="Remote URL" FontWeight="SemiBold" />
                                        <TextBox x:Name="GitHubRemoteUrlBox" IsReadOnly="True" BorderThickness="0" Background="Transparent" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!--  Row 3: World Information and Statistics Cards  -->
                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  World Information Card  -->
                            <Border
                                Grid.Column="0"
                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20">
                                <StackPanel Spacing="16">
                                    <!--  Card Header  -->
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <FontIcon
                                            Glyph="&#xE7C3;"
                                            FontSize="20"
                                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                                        <TextBlock
                                            Text="World Information"
                                            FontSize="18"
                                            FontWeight="SemiBold" />
                                    </StackPanel>

                                    <!--  World Details  -->
                                    <StackPanel Spacing="16">
                                        <StackPanel Spacing="8">
                                            <TextBlock Text="World Size" FontWeight="SemiBold" FontSize="14" />
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon
                                                    Glyph="&#xE8B7;"
                                                    FontSize="14"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                                <TextBlock
                                                    x:Name="WorldSizeText"
                                                    Text="Unknown"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Spacing="8">
                                            <TextBlock Text="Game Version" FontWeight="SemiBold" FontSize="14" />
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon
                                                    Glyph="&#xE945;"
                                                    FontSize="14"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                                <TextBlock
                                                    x:Name="GameVersionText"
                                                    Text="Unknown"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Spacing="8">
                                            <TextBlock Text="Last Modified" FontWeight="SemiBold" FontSize="14" />
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon
                                                    Glyph="&#xE917;"
                                                    FontSize="14"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                                <TextBlock
                                                    x:Name="WorldLastModifiedText"
                                                    Text="Unknown"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Spacing="8">
                                            <TextBlock Text="Added to GitMC" FontWeight="SemiBold" FontSize="14" />
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon
                                                    Glyph="&#xE8FA;"
                                                    FontSize="14"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                                <TextBlock
                                                    x:Name="AddedDateText"
                                                    Text="Unknown"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!--  Statistics Card  -->
                            <Border
                                Grid.Column="2"
                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20">
                                <StackPanel Spacing="16">
                                    <!--  Card Header  -->
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <FontIcon
                                            Glyph="&#xE9D9;"
                                            FontSize="20"
                                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" />
                                        <TextBlock
                                            Text="Repository Statistics"
                                            FontSize="18"
                                            FontWeight="SemiBold" />
                                    </StackPanel>

