<?xml version="1.0" encoding="UTF-8" ?>

<Page
    x:Class="GitMC.Views.SaveDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GitMC.Extensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:GitMC.Models"
    Background="{ThemeResource LayerFillColorDefaultBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Top Bar Section  -->
        <Grid Grid.Row="0" Margin="24,16,24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Save Icon  -->
            <Border
                Grid.Column="0"
                Width="80"
                Height="80"
                Background="#E3F2FD"
                BorderBrush="#C8E6FA"
                BorderThickness="1"
                CornerRadius="8">
                <FontIcon
                    x:Name="SaveIconFont"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="32"
                    Foreground="#2196F3"
                    Glyph="&#xE8B7;" />
            </Border>

            <!--  Save Information  -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                <TextBlock
                    x:Name="SaveNameText"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Text="Save Name" />
                <TextBlock
                    x:Name="SavePathText"
                    Margin="0,4,0,8"
                    FontSize="14"
                    Foreground="Gray"
                    Text="Save Path" />

                <!--  Info Line with Icons  -->
                <StackPanel
                    Margin="0,0,0,0"
                    Orientation="Horizontal"
                    Spacing="24">
                    <!--  Branch Count  -->
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Image
                            Width="16"
                            Height="16"
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            Source="ms-appx:///Assets/Icons/branch_grey.svg"
                            UseLayoutRounding="True" />
                        <TextBlock
                            x:Name="BranchCountText"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="Gray"
                            Text="3 branches" />
                    </StackPanel>

                    <!--  Commit Count  -->
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Image
                            Width="16"
                            Height="16"
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            Source="ms-appx:///Assets/Icons/commit_grey.svg"
                            UseLayoutRounding="True" />
                        <TextBlock
                            x:Name="CommitCountText"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="Gray"
                            Text="45 commits" />
                    </StackPanel>

                    <!--  Last Modified  -->
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <FontIcon
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Foreground="Gray"
                            Glyph="&#xE823;" />
                        <TextBlock
                            x:Name="LastModifiedText"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="Gray"
                            Text="2 hours ago" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!--  Status and Git Badges Section  -->
            <StackPanel
                Grid.Column="3"
                VerticalAlignment="Center"
                Spacing="8">
                <!--  Top Row: Status Badge  -->
                <Border
                    Padding="8,4,8,4"
                    HorizontalAlignment="Right"
                    Background="#FFF4CE"
                    BorderBrush="#F7E018"
                    BorderThickness="1"
                    CornerRadius="12"
                    UseLayoutRounding="True">
                    <TextBlock
                        x:Name="SaveStatusBadgeText"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="#8A6914"
                        Text="modified"
                        UseLayoutRounding="True" />
                </Border>

                <!--  Bottom Row: Git Status Badge  -->
                <StackPanel
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Spacing="8">
                    <!--  Push Badge  -->
                    <Border
                        x:Name="PushStatusBadge"
                        Padding="8,4,8,4"
                        Background="#E6F3FF"
                        BorderBrush="#0078D4"
                        BorderThickness="1"
                        CornerRadius="8"
                        UseLayoutRounding="True">
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <FontIcon
                                Margin="0,0,4,0"
                                VerticalAlignment="Center"
                                FontSize="10"
                                Foreground="#0078D4"
                                Glyph="&#xE898;"
                                UseLayoutRounding="True" />
                            <TextBlock
                                x:Name="PushStatusText"
                                VerticalAlignment="Center"
                                FontSize="10"
                                FontWeight="SemiBold"
                                Foreground="#0078D4"
                                Text="1 to push"
                                UseLayoutRounding="True" />
                        </StackPanel>
                    </Border>

                    <!--  Pull Badge  -->
                    <Border
                        x:Name="PullStatusBadge"
                        Padding="8,4,8,4"
                        Background="#E6F3FF"
                        BorderBrush="#0078D4"
                        BorderThickness="1"
                        CornerRadius="8"
                        UseLayoutRounding="True">
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <FontIcon
                                Margin="0,0,4,0"
                                VerticalAlignment="Center"
                                FontSize="10"
                                Foreground="#0078D4"
                                Glyph="&#xE896;"
                                UseLayoutRounding="True" />
                            <TextBlock
                                x:Name="PullStatusText"
                                VerticalAlignment="Center"
                                FontSize="10"
                                FontWeight="SemiBold"
                                Foreground="#0078D4"
                                Text="2 to pull"
                                UseLayoutRounding="True" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!--  Button Bar Section  -->
        <Border
            Grid.Row="1"
            Margin="24,0,24,12"
            Padding="12"
            Background="White"
            BorderBrush="#E1E1E1"
            BorderThickness="1"
            CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Left Side Controls  -->
                <StackPanel
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="12">

                    <!--  Branch ComboBox with integrated Create Branch option  -->
                    <ComboBox
                        x:Name="BranchComboBox"
                        MinWidth="150"
                        SelectionChanged="BranchComboBox_SelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock VerticalAlignment="Center" Text="{Binding DisplayName}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!--  Fetch/Pull Button  -->
                    <Grid>
                        <!--  Normal Button (when no commits to pull)  -->
                        <Button
                            x:Name="FetchButton"
                            Click="FetchButton_Click"
                            Visibility="Visible">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon
                                    x:Name="FetchIcon"
                                    FontSize="16"
                                    Glyph="&#xE895;" />
                                <TextBlock x:Name="FetchText" Text="Fetch remote" />
                            </StackPanel>
                        </Button>

                        <!--  SplitButton (when there are commits to pull)  -->
                        <SplitButton
                            x:Name="PullButton"
                            Click="PullButton_Click"
                            Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon
                                    x:Name="PullIcon"
                                    FontSize="16"
                                    Glyph="&#xE896;" />
                                <TextBlock x:Name="PullText" Text="Pull commits" />
                            </StackPanel>
                            <SplitButton.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem
                                        x:Name="FetchFromDropdown"
                                        Click="FetchButton_Click"
                                        Text="Fetch remote">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon Glyph="&#xE895;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyout>
                            </SplitButton.Flyout>
                        </SplitButton>

                        <!--  Pull Badge  -->
                        <Border
                            x:Name="PullBadge"
                            MinWidth="20"
                            Margin="0,-8,0,0"
                            Padding="4,2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="#FF4444"
                            CornerRadius="10"
                            Visibility="Collapsed">
                            <TextBlock
                                x:Name="PullBadgeText"
                                HorizontalAlignment="Center"
                                FontSize="10"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="2" />
                        </Border>
                    </Grid>

                    <!--  Push Button with Badge  -->
                    <Grid>
                        <Button
                            x:Name="PushButton"
                            Click="PushButton_Click"
                            IsEnabled="False">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE898;" />
                                <TextBlock Text="{local:Localize Key=SaveDetail_Push}" />
                            </StackPanel>
                        </Button>

                        <!--  Push Badge  -->
                        <Border
                            x:Name="PushBadge"
                            MinWidth="20"
                            Margin="0,-8,0,0"
                            Padding="4,2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="#FF4444"
                            CornerRadius="10"
                            Visibility="Collapsed">
                            <TextBlock
                                x:Name="PushBadgeText"
                                HorizontalAlignment="Center"
                                FontSize="10"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="1" />
                        </Border>
                    </Grid>

                    <!--  Translate Button (Primary action)  -->
                    <Button
                        x:Name="TranslatePrimaryButton"
                        Click="TranslateButton_Click"
                        Style="{StaticResource AccentButtonStyle}"
                        IsEnabled="{x:Bind ViewModel.CanTranslate, Mode=OneWay}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon FontSize="16" Glyph="&#xE74E;" />
                            <TextBlock Text="Translate" />
                        </StackPanel>
                        <ToolTipService.ToolTip>
                            <ToolTip Content="Translate changed binary data to SNBT when the world is idle" />
                        </ToolTipService.ToolTip>
                    </Button>
                </StackPanel>

                <!--  Right Side Controls  -->
                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="8">

                    <!--  Stash Button  -->
                    <Button x:Name="StashButton" Click="StashButton_Click">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon FontSize="14" Glyph="&#xE7B8;" />
                            <TextBlock FontSize="13" Text="{local:Localize Key=SaveDetail_Stash}" />
                        </StackPanel>
                    </Button>

                    <!--  Scan Button  -->
                    <Button x:Name="ScanButton" Click="ScanButton_Click">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon FontSize="14" Glyph="&#xE773;" />
                            <TextBlock FontSize="13" Text="{local:Localize Key=SaveDetail_Scan}" />
                        </StackPanel>
                    </Button>

                    <!--  Open Folder Button  -->
                    <Button
                        x:Name="OpenFolderButton"
                        Click="OpenInExplorerButton_Click"
                        ToolTipService.ToolTip="{local:Localize Key=SaveDetail_OpenInExplorer}">
                        <FontIcon FontSize="16" Glyph="&#xE8DA;" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!--  Navigation Tabs and Content Area  -->
        <Grid Grid.Row="2" Margin="24,0,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="8" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Navigation Tabs  -->
            <SelectorBar
                x:Name="TabSelector"
                Grid.Row="0"
                SelectionChanged="TabSelector_SelectionChanged">
                <SelectorBarItem
                    x:Name="OverviewTab"
                    IsSelected="True"
                    Text="{local:Localize Key=SaveDetail_Tab_Overview}">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE80F;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem x:Name="FilesTab" Text="{local:Localize Key=SaveDetail_Tab_Files}">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE8A5;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem x:Name="HistoryTab" Text="{local:Localize Key=SaveDetail_Tab_History}">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE81C;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem x:Name="ChangesTab" Text="{local:Localize Key=SaveDetail_Tab_Changes}">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE8AC;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem x:Name="AnalyticsTab" Text="{local:Localize Key=SaveDetail_Tab_Analytics}">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE9D9;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
                <SelectorBarItem x:Name="SettingsTab" Text="Settings">
                    <SelectorBarItem.Icon>
                        <FontIcon Glyph="&#xE713;" />
                    </SelectorBarItem.Icon>
                </SelectorBarItem>
            </SelectorBar>

            <!--  Separator Line  -->
            <Border
                Grid.Row="1"
                Height="1"
                Margin="0,8,0,0"
                Background="{ThemeResource SurfaceStrokeColorDefaultBrush}" />

            <!--  Content Area (No ScrollViewer - content manages its own scrolling)  -->
            <Grid Grid.Row="3">
                <!--  Overview Tab Content  -->
                <ScrollViewer
                    x:Name="OverviewScrollViewer"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto"
                    Visibility="Visible">
                    <Grid x:Name="OverviewContent" Margin="24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Row 1: Current Status Card  -->
                        <Border
                            Grid.Row="0"
                            Padding="20"
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                            <StackPanel Spacing="16">
                                <!--  Card Header  -->
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <FontIcon
                                        FontSize="20"
                                        Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                        Glyph="&#xE916;" />
                                    <TextBlock
                                        FontSize="18"
                                        FontWeight="SemiBold"
                                        Text="Current Status" />
                                </StackPanel>

                                <!--  Branch Status Row  -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Branch Icon and Name  -->
                                    <StackPanel
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal"
                                        Spacing="8">
                                        <ImageIcon
                                            Width="16"
                                            Height="16"
                                            Source="../Assets/Icons/branch_grey.svg" />
                                        <TextBlock
                                            x:Name="CurrentBranchDisplayText"
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Text="main" />
                                    </StackPanel>

                                    <!--  Sync Status Badge  -->
                                    <Border
                                        x:Name="SyncStatusBadge"
                                        Grid.Column="2"
                                        Padding="8,4"
                                        VerticalAlignment="Center"
                                        Background="#E6F3FF"
                                        BorderBrush="#B3D9FF"
                                        BorderThickness="1"
                                        CornerRadius="12">
                                        <TextBlock
                                            x:Name="SyncStatusText"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Foreground="#0066CC"
                                            Text="Up to date" />
                                    </Border>
                                </Grid>

                                <!--  Status InfoBar  -->
                                <InfoBar
                                    x:Name="StatusInfoBar"
                                    Title="Working tree clean"
                                    IsClosable="False"
                                    IsOpen="True"
                                    Message="All changes are committed and synchronized"
                                    Severity="Success">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <HyperlinkButton Content="What is translation?" NavigateUri="https://github.com/NaughtyChas/GitMC/wiki/Translation" />
                                    </StackPanel>
                                </InfoBar>

                                <!--  Status Grid - Two Columns with Enhanced Layout  -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Left Column: Translation Status - Enhanced with Border  -->
                                    <Border
                                        Grid.Column="0"
                                        Padding="12"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6">
                                        <StackPanel Spacing="12">
                                            <!--  Section Header  -->
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon
                                                    FontSize="14"
                                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                    Glyph="&#xE895;" />
                                                <TextBlock
                                                    FontSize="13"
                                                    FontWeight="SemiBold"
                                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                    Text="Translation Status" />
                                            </StackPanel>

                                            <!--  Translation Progress Section  -->
                                            <StackPanel Spacing="6">
                                                <TextBlock
                                                    FontSize="11"
                                                    Foreground="#666666"
                                                    Text="Current Translation" />
                                                <Grid ColumnSpacing="8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <ProgressBar x:Name="TranslationProgressBar" Height="4" Minimum="0" Maximum="100" Value="0" />
                                                    <TextBlock Grid.Column="1" x:Name="TranslationProgressText" FontSize="11" Foreground="#666666" Text="Idle" />
                                                </Grid>
                                                <TextBlock x:Name="TranslationStepText" FontSize="11" Foreground="#999999" Text="Waiting..." />
                                            </StackPanel>

                                            <!--  Separator  -->
                                            <Border Height="1" Margin="0,2" Background="{ThemeResource DividerStrokeColorDefaultBrush}" />
                                            <!--  Ahead / Behind row  -->
                                            <Grid ColumnSpacing="8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <StackPanel
                                                    Grid.Column="0"
                                                    Orientation="Horizontal"
                                                    Spacing="4">
                                                    <TextBlock FontSize="12" Text="Ahead" />
                                                    <TextBlock
                                                        x:Name="AheadCommitsText"
                                                        FontSize="12"
                                                        FontWeight="SemiBold"
                                                        Foreground="#22C55E"
                                                        Text="0 commits" />
                                                </StackPanel>

                                                <!--  Behind  -->
                                                <StackPanel
                                                    Grid.Column="1"
                                                    Orientation="Horizontal"
                                                    Spacing="4">
                                                    <TextBlock FontSize="12" Text="Behind" />
                                                    <TextBlock
                                                        x:Name="BehindCommitsText"
                                                        FontSize="12"
                                                        FontWeight="SemiBold"
                                                        Foreground="#EF4444"
                                                        Text="0 commits" />
                                                </StackPanel>
                                            </Grid>

                                            <!--  Separator  -->
                                            <Border
                                                Height="1"
                                                Margin="0,2"
                                                Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

                                            <!--  Available Branches Section  -->
                                            <StackPanel Spacing="6">
                                                <TextBlock
                                                    FontSize="11"
                                                    FontWeight="Medium"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                    Text="Available Branches" />
                                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                                                    <StackPanel
                                                        x:Name="BranchTagsContainer"
                                                        Orientation="Horizontal"
                                                        Spacing="4">
                                                        <Border
                                                            Padding="6,3"
                                                            Background="#E6F3FF"
                                                            BorderBrush="#B3D9FF"
                                                            CornerRadius="8">
                                                            <TextBlock
                                                                FontSize="10"
                                                                FontWeight="Medium"
                                                                Foreground="#0066CC"
                                                                Text="main" />
                                                        </Border>
                                                        <Border
                                                            Padding="6,3"
                                                            Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                                            CornerRadius="8">
                                                            <TextBlock FontSize="10" Text="feature/castle-wing" />
                                                        </Border>
                                                        <Border
                                                            Padding="6,3"
                                                            Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                                            CornerRadius="8">
                                                            <TextBlock FontSize="10" Text="hotfix/water-fix" />
                                                        </Border>
                                                    </StackPanel>
                                                </ScrollViewer>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <!--  Right Column: File Changes Breakdown - Enhanced with Border  -->
                                    <Border
                                        Grid.Column="2"
                                        Padding="12"
                                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6">
                                        <StackPanel Spacing="12">
                                            <!--  Section Header  -->
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon
                                                    FontSize="14"
                                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                    Glyph="&#xE8A7;" />
                                                <TextBlock
                                                    FontSize="13"
                                                    FontWeight="SemiBold"
                                                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                    Text="File Changes Breakdown" />
                                            </StackPanel>

                                            <!--  File Types Section  -->
                                            <StackPanel Spacing="8">
                                                <TextBlock
                                                    FontSize="11"
                                                    FontWeight="Medium"
                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                    Text="Minecraft Data Types" />

                                                <!--  Region Chunks  -->
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        Grid.Column="0"
                                                        VerticalAlignment="Center"
                                                        FontSize="12"
                                                        Text="Region Chunks" />

                                                    <StackPanel
                                                        Grid.Column="1"
                                                        Orientation="Horizontal"
                                                        Spacing="4">
                                                        <TextBlock
                                                            x:Name="RegionChunksCountText"
                                                            FontSize="12"
                                                            FontWeight="SemiBold"
                                                            Text="2" />
                                                        <Ellipse
                                                            Width="6"
                                                            Height="6"
                                                            VerticalAlignment="Center"
                                                            Fill="#3B82F6" />
                                                    </StackPanel>
                                                </Grid>

                                                <!--  World Data  -->
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        Grid.Column="0"
                                                        VerticalAlignment="Center"
                                                        FontSize="12"
                                                        Text="World Data" />

                                                    <StackPanel
                                                        Grid.Column="1"
                                                        Orientation="Horizontal"
                                                        Spacing="4">
                                                        <TextBlock
                                                            x:Name="WorldDataCountText"
                                                            FontSize="12"
                                                            FontWeight="SemiBold"
                                                            Text="1" />
                                                        <Ellipse
                                                            Width="6"
                                                            Height="6"
                                                            VerticalAlignment="Center"
                                                            Fill="#3B82F6" />
                                                    </StackPanel>
                                                </Grid>

                                                <!--  Player Data  -->
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        Grid.Column="0"
                                                        VerticalAlignment="Center"
                                                        FontSize="12"
                                                        Text="Player Data" />

                                                    <StackPanel
                                                        Grid.Column="1"
                                                        Orientation="Horizontal"
                                                        Spacing="4">
                                                        <TextBlock
                                                            x:Name="PlayerDataCountText"
                                                            FontSize="12"
                                                            FontWeight="SemiBold"
                                                            Text="1" />
                                                        <Ellipse
                                                            Width="6"
                                                            Height="6"
                                                            VerticalAlignment="Center"
                                                            Fill="#3B82F6" />
                                                    </StackPanel>
                                                </Grid>

                                                <!--  Entity Data  -->
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock
                                                        Grid.Column="0"
                                                        VerticalAlignment="Center"
                                                        FontSize="12"
                                                        Text="Entity Data" />

                                                    <StackPanel
                                                        Grid.Column="1"
                                                        Orientation="Horizontal"
                                                        Spacing="4">
                                                        <TextBlock
                                                            x:Name="EntityDataCountText"
