                    </Grid>
                </ScrollViewer>

                <!--  Other Tab Contents (Hidden by default)  -->
                <TextBlock
                    HorizontalAlignment="Center"
                    Text="Files tab content - Coming soon"
                    VerticalAlignment="Center"
                    Visibility="Collapsed"
                    x:Name="FilesContent" />

                <TextBlock
                    HorizontalAlignment="Center"
                    Text="History tab content - Coming soon"
                    VerticalAlignment="Center"
                    Visibility="Collapsed"
                    x:Name="HistoryContent" />

                <!--  Changes Tab Content  -->
                <Grid Visibility="Collapsed" x:Name="ChangesContent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="360" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Left Panel: Changed Files and Commit Panel  -->
                    <Grid Grid.Column="0">
                        <!-- Normal Content -->
                        <Grid Visibility="{Binding ShowTranslationInProgress, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" x:Name="ChangedFilesRowDefinition" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" x:Name="CommitSectionRowDefinition" />
                            </Grid.RowDefinitions>
                        <!--  Changed Files List with Flexible Height  -->
                        <Border
                            Background="White"
                            BorderBrush="#E1E1E1"
                            BorderThickness="1"
                            CornerRadius="8"
                            Grid.Row="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--  Header  -->
                                <Border
                                    Background="#F8F9FA"
                                    CornerRadius="8,8,0,0"
                                    Grid.Row="0"
                                    Padding="12,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Grid.Column="0"
                                            Text="Changed Files"
                                            VerticalAlignment="Center" />
                                        <Button
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="RefreshChanges_Click"
                                            Grid.Column="1"
                                            x:Name="RefreshChangesButton">
                                            <FontIcon FontSize="14" Glyph="&#xE72C;" />
                                        </Button>
                                    </Grid>
                                </Border>

                                <!--  File Groups List with Scrolling  -->
                                <ScrollViewer
                                    Grid.Row="1"
                                    HorizontalScrollBarVisibility="Disabled"
                                    Padding="8"
                                    VerticalScrollBarVisibility="Auto"
                                    x:Name="ChangedFilesScrollViewer">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <!--  Loading state (exclusive)  -->
                                        <StackPanel
                                            HorizontalAlignment="Center"
                                            Spacing="8"
                                            VerticalAlignment="Center"
                                            Visibility="{x:Bind ViewModel.IsChangesLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <ProgressRing
                                                Height="20"
                                                IsActive="True"
                                                Width="20" />
                                            <TextBlock Text="Loading changed files..." />
                                        </StackPanel>
                                        <!--  Empty state (exclusive: only when not loading and no files)  -->
                                        <StackPanel
                                            HorizontalAlignment="Center"
                                            Spacing="8"
                                            VerticalAlignment="Center"
                                            Visibility="{x:Bind ViewModel.ShowChangesEmptyState, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <FontIcon Glyph="&#xE8AC;" />
                                            <TextBlock Text="No changes detected." />
                                        </StackPanel>
                                        <!--  Content (exclusive: only when not loading and has files)  -->
                                        <ItemsControl ItemsSource="{x:Bind ViewModel.ChangedFileGroups}" Visibility="{x:Bind ViewModel.HasChangedFiles, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate x:DataType="models:ChangedFileGroup">
                                                    <Expander
                                                        HorizontalAlignment="Stretch"
                                                        HorizontalContentAlignment="Stretch"
                                                        IsExpanded="{x:Bind IsExpanded, Mode=TwoWay}"
                                                        Margin="0,2">
                                                        <Expander.Header>
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto" />
                                                                    <ColumnDefinition Width="8" />
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>
                                                                <FontIcon
                                                                    FontSize="14"
                                                                    Foreground="#666666"
                                                                    Glyph="{x:Bind CategoryIcon}"
                                                                    Grid.Column="0"
                                                                    VerticalAlignment="Center" />
                                                                <TextBlock
                                                                    FontWeight="SemiBold"
                                                                    Grid.Column="2"
                                                                    Text="{x:Bind CategoryName}"
                                                                    VerticalAlignment="Center" />
                                                                <TextBlock
                                                                    FontSize="11"
                                                                    Foreground="#666666"
                                                                    Grid.Column="3"
                                                                    Text="{x:Bind FileCount}"
                                                                    VerticalAlignment="Center" />
                                                            </Grid>
                                                        </Expander.Header>
                                                        <ListView
                                                            HorizontalAlignment="Stretch"
                                                            HorizontalContentAlignment="Stretch"
                                                            ItemsSource="{x:Bind Files}"
                                                            SelectionChanged="ChangedFiles_SelectionChanged"
                                                            SelectionMode="Single"
                                                            x:Name="ChangedFilesList">
                                                            <ListView.ItemTemplate>
                                                                <DataTemplate x:DataType="models:ChangedFile">
                                                                    <Grid
                                                                        Background="Transparent"
                                                                        HorizontalAlignment="Stretch"
                                                                        Margin="0,1"
                                                                        Padding="6">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="Auto" />
                                                                            <ColumnDefinition Width="8" />
                                                                            <ColumnDefinition Width="*" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <FontIcon
                                                                            FontSize="12"
                                                                            Foreground="{x:Bind StatusColor}"
                                                                            Glyph="{x:Bind IconGlyph}"
                                                                            Grid.Column="0"
                                                                            VerticalAlignment="Center" />
                                                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                                            <TextBlock
                                                                                FontSize="12"
                                                                                Text="{x:Bind FileName}"
                                                                                TextTrimming="CharacterEllipsis" />
                                                                            <TextBlock
                                                                                FontSize="10"
                                                                                Foreground="#666666"
                                                                                Text="{x:Bind DisplaySize}"
                                                                                Visibility="{x:Bind ChunkCount, Converter={StaticResource IntToVisibilityConverter}}" />
                                                                        </StackPanel>
                                                                        <Border
                                                                            Background="{x:Bind StatusColor}"
                                                                            CornerRadius="8"
                                                                            Grid.Column="3"
                                                                            Padding="6,2">
                                                                            <TextBlock
                                                                                FontSize="9"
                                                                                FontWeight="SemiBold"
                                                                                Foreground="White"
                                                                                Text="{x:Bind StatusText}" />
                                                                        </Border>
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </ListView.ItemTemplate>
                                                        </ListView>
                                                    </Expander>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!--  Commit Panel (Collapsible)  -->
                        <Border
                            Background="White"
                            BorderBrush="#E1E1E1"
                            BorderThickness="1"
                            CornerRadius="8"
                            Grid.Row="2"
                            x:Name="CommitSectionBorder">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" x:Name="CommitContentRowDefinition" />
                                    <RowDefinition Height="Auto" x:Name="CommitActionsRowDefinition" />
                                </Grid.RowDefinitions>

                                <!--  Commit Header with Collapse Button  -->
                                <Border
                                    Background="#F8F9FA"
                                    CornerRadius="8,8,0,0"
                                    Grid.Row="0"
                                    Padding="12,8">
                                    <Button
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="ToggleCommitSection_Click"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Stretch"
                                        Padding="0"
                                        x:Name="CommitSectionToggleButton">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Grid.Column="0"
                                                HorizontalAlignment="Left"
                                                Text="Commit Changes"
                                                VerticalAlignment="Center" />
                                            <FontIcon
                                                FontSize="14"
                                                Glyph="&#xE70D;"
                                                Grid.Column="1"
                                                RenderTransformOrigin="0.5,0.5"
                                                VerticalAlignment="Center"
                                                x:Name="CommitSectionCollapseIcon">
                                                <FontIcon.RenderTransform>
                                                    <RotateTransform x:Name="CommitSectionCollapseIconTransform" />
                                                </FontIcon.RenderTransform>
                                            </FontIcon>
                                        </Grid>
                                    </Button>
                                </Border>

                                <!--  Commit Form (Collapsible Content)  -->
                                <StackPanel
                                    Grid.Row="1"
                                    Margin="12"
                                    Spacing="8"
                                    Visibility="{x:Bind ViewModel.IsCommitInProgress, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                    x:Name="CommitFormContent">
                                    <TextBox
                                        PlaceholderText="Enter commit message..."
                                        Text="{x:Bind ViewModel.CommitMessage, Mode=TwoWay}"
                                        x:Name="CommitMessageTextBox" />
                                    <TextBox
                                        AcceptsReturn="True"
                                        Height="72"
                                        PlaceholderText="Provide additional details about your changes..."
                                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                                        Text="{x:Bind ViewModel.CommitDescription, Mode=TwoWay}"
                                        TextWrapping="Wrap"
                                        x:Name="CommitDescriptionTextBox" />
                                </StackPanel>

                                <!--  Commit Actions (Collapsible Content)  -->
                                <Border
                                    BorderBrush="#E1E1E1"
                                    BorderThickness="0,1,0,0"
                                    Grid.Row="2"
                                    Padding="12,8"
                                    Visibility="{x:Bind ViewModel.IsCommitInProgress, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                    x:Name="CommitActionsContent">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Button
                                            Background="#2196F3"
                                            Click="CommitChanges_Click"
                                            Foreground="White"
                                            Grid.Column="0"
                                            HorizontalAlignment="Stretch"
                                            IsEnabled="{x:Bind ViewModel.IsCommitInProgress, Converter={StaticResource BoolNegationConverter}}"
                                            x:Name="CommitButton">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon FontSize="16" Glyph="&#xE74E;" />
                                                <TextBlock Text="Commit" />
                                            </StackPanel>
                                        </Button>
                                        <Button
                                            Background="#4CAF50"
                                            Click="CommitAndPushChanges_Click"
                                            Foreground="White"
                                            Grid.Column="2"
                                            HorizontalAlignment="Stretch"
                                            IsEnabled="{x:Bind ViewModel.CanCommitAndPush, Mode=OneWay}"
                                            x:Name="CommitAndPushButton">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon FontSize="16" Glyph="&#xE898;" />
                                                <TextBlock Text="Commit &amp; Push" />
                                            </StackPanel>
                                        </Button>
                                        <!--  Unused options button removed  -->
                                    </Grid>
                                </Border>

                                <!--  Commit Progress Panel (shows when committing)  -->
                                <Border
                                    Grid.Row="1"
                                    Grid.RowSpan="2"
                                    Padding="16"
                                    Visibility="{x:Bind ViewModel.IsCommitInProgress, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <StackPanel Spacing="12">
                                        <StackPanel
                                            Orientation="Horizontal"
                                            Spacing="8"
                                            VerticalAlignment="Center">
                                            <ProgressRing
                                                Height="18"
                                                IsActive="True"
                                                Width="18" />
                                            <TextBlock FontWeight="SemiBold" Text="Committing changes..." />
                                        </StackPanel>
                                        <TextBlock Text="{x:Bind ViewModel.CommitProgressMessage, Mode=OneWay}" TextWrapping="Wrap" />
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                        </Grid>

                <!-- Left Panel Translation Progress Overlay (disabled; replaced by full-width overlay) -->
                <Grid Visibility="Collapsed"
                    Background="White">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <Border
                                Background="#F8F9FA"
                                BorderBrush="#E1E1E1"
                                BorderThickness="0,0,0,1"
                                Grid.Row="0"
                                Padding="16,12">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <Border
                                        Background="#E3F2FD"
                                        BorderBrush="#C8E6FA"
                                        BorderThickness="2"
                                        CornerRadius="20"
                                        Height="40"
                                        Width="40">
                                        <FontIcon
                                            FontSize="20"
                                            Foreground="#2196F3"
                                            Glyph="&#xE8AB;"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center" />
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Text="Processing Files" />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="#666666"
                                            Text="Converting files to SNBT format..." />
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Processing Content Area -->
                            <ScrollViewer Grid.Row="1" Padding="16">
                                <StackPanel Spacing="16" VerticalAlignment="Center">
                                    <!-- Progress Information -->
                                    <StackPanel Spacing="12">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Text="Current Progress" />

                                        <StackPanel Spacing="8">
                                            <ProgressBar
                                                Height="6"
                                                Value="{Binding TranslationProgressValue, Mode=OneWay}"
                                                Maximum="100"
                                                Minimum="0" />

                                            <Grid>
                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="#666666"
                                                    HorizontalAlignment="Left"
                                                    Text="{Binding TranslationProgressMessage, Mode=OneWay}" />

                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="#666666"
                                                    HorizontalAlignment="Right"
                                                    Text="{Binding TranslationProgressValue, Mode=OneWay, Converter={StaticResource DoubleToPercentageConverter}}" />
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Status Information -->
                                    <Border
                                        Background="#FFF8E1"
                                        BorderBrush="#FFE082"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="12">
                                        <StackPanel Spacing="8">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon
                                                    FontSize="16"
                                                    Foreground="#FF8F00"
                                                    Glyph="&#xE946;" />
                                                <TextBlock
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    Text="What's happening?" />
                                            </StackPanel>

                                            <TextBlock
                                                FontSize="12"
                                                Foreground="#666666"
                                                TextWrapping="Wrap"
                                                Text="GitMC is processing changed files and converting them from binary NBT to human-readable SNBT format. This makes your Minecraft save data version-controllable with Git." />
                                        </StackPanel>
                                    </Border>

                                    <!-- File Processing Status -->
                                    <StackPanel Spacing="8">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Text="Processing Status" />

                                        <Border
                                            Background="#F0F8FF"
                                            BorderBrush="#B8D4F1"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="12,8">
                                            <StackPanel Spacing="6">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <FontIcon
                                                        FontSize="14"
                                                        Foreground="#0066CC"
                                                        Glyph="&#xE8F4;" />
                                                    <TextBlock
                                                        FontSize="12"
                                                        Text="Files are being analyzed and converted" />
                                                </StackPanel>
                                                <TextBlock
                                                    FontSize="11"
                                                    Foreground="#666666"
                                                    Text="Please wait while the translation process completes..." />
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>

                            <!-- Footer with Status -->
                            <Border
                                Background="#F8F9FA"
                                BorderBrush="#E1E1E1"
                                BorderThickness="0,1,0,0"
                                Grid.Row="2"
                                Padding="16,8">
                                <TextBlock
                                    FontSize="11"
                                    Foreground="#666666"
                                    HorizontalAlignment="Center"
                                    Text="Changed files will appear here once processing is complete" />
                            </Border>
                        </Grid>
                    </Grid>

                    <!--  Splitter  -->
                    <Border
                        Background="#E1E1E1"
                        Grid.Column="1"
                        Width="1" />

                    <!--  Right Panel: File Content Editor  -->
                    <Grid Grid.Column="2" Loaded="EditorAreaGrid_Loaded">
                        <!-- Normal Editor Content -->
                        <Grid Visibility="{Binding ShowTranslationInProgress, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <!--  Start collapsed; code-behind will toggle between 0 and 280 based on IsSidePanelVisible  -->
                                <ColumnDefinition Width="0" x:Name="SidePanelColumn" />
                            </Grid.ColumnDefinitions>

                            <!--  Main Content Area  -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  File Editor Header  -->
                            <Border
                                Background="White"
                                BorderBrush="#E1E1E1"
                                BorderThickness="0,0,0,1"
                                Grid.Row="0"
                                Padding="12,8"
                                Visibility="{x:Bind ViewModel.SelectedChangedFile, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Text="{x:Bind ViewModel.SelectedChangedFile.FileName, Mode=OneWay, FallbackValue='Select a file to view and edit'}" />
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <TextBlock
                                                FontSize="10"
                                                Foreground="#666666"
                                                Text="{x:Bind ViewModel.SelectedChangedFile.RelativePath, Mode=OneWay}"
                                                TextTrimming="CharacterEllipsis" />
                                            <Border
                                                Background="{x:Bind ViewModel.SelectedChangedFile.StatusColor, Mode=OneWay}"
                                                CornerRadius="6"
                                                Padding="6,2">
                                                <TextBlock
                                                    FontSize="9"
                                                    FontWeight="SemiBold"
                                                    Foreground="White"
                                                    Text="{x:Bind ViewModel.SelectedChangedFile.StatusText, Mode=OneWay}" />
                                            </Border>
                                            <TextBlock
                                                FontSize="10"
                                                Foreground="#666666"
                                                Text="{x:Bind ViewModel.SelectedChangedFile.DisplaySize, Mode=OneWay}" />
                                            <TextBlock
                                                FontSize="10"
                                                Foreground="#666666"
                                                Text="{x:Bind ViewModel.SelectedFileLastModifiedText, Mode=OneWay}"
                                                Visibility="{x:Bind ViewModel.SelectedFileLastModifiedText, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}" />
                                            <TextBlock
                                                FontSize="10"
                                                Foreground="#666666"
                                                Text="{x:Bind ViewModel.SelectedFileTranslatedAtText, Mode=OneWay}"
                                                Visibility="{x:Bind ViewModel.SelectedFileTranslatedAtText, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!--  Translation Status Badge  -->
                                    <Border
                                        Background="#4CAF50"
                                        CornerRadius="12"
                                        Grid.Column="1"
                                        Padding="8,4"
                                        Visibility="{x:Bind ViewModel.SelectedChangedFile.IsTranslated, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                        x:Name="TranslatedBadge">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon
                                                FontSize="12"
                                                Foreground="White"
                                                Glyph="&#xE73E;" />
                                            <TextBlock
                                                FontSize="11"
                                                FontWeight="SemiBold"
                                                Foreground="White"
                                                Text="Translated" />
                                        </StackPanel>
                                    </Border>

                                    <!--  Toggle Side Panel Button  -->
                                    <Button
                                        Click="ToggleSidePanel_Click"
                                        Grid.Column="3"
                                        x:Name="ToggleSidePanelButton">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon
                                                FontSize="14"
                                                Glyph="&#xE76F;"
                                                x:Name="SidePanelToggleIcon" />
                                            <TextBlock Text="Tools" />
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </Border>

                            <!--  Top border filler when no file selected (keeps the upper bound visible)  -->
                            <Border
                                Background="#E1E1E1"
                                Grid.Row="0"
                                Height="1"
                                Visibility="{x:Bind ViewModel.SelectedChangedFile, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}" />

                            <!--  File Content Area  -->
                            <!--  Make editor area padded instead of boxed; remove surrounding border  -->
                            <Grid Background="White" Grid.Row="1">
                                <!--  Default State: No File Selected  -->
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    Spacing="16"
                                    VerticalAlignment="Center"
                                    Visibility="{x:Bind ViewModel.SelectedChangedFile, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}"
                                    x:Name="NoFileSelectedPanel">
                                    <FontIcon
                                        FontSize="48"
                                        Foreground="#CCCCCC"
                                        Glyph="&#xE8A5;" />
                                    <TextBlock
                                        FontSize="18"
                                        Foreground="#666666"
                                        HorizontalAlignment="Center"
                                        Text="Select a changed file to view details" />
                                    <TextBlock
                                        FontSize="14"
                                        Foreground="#999999"
                                        HorizontalAlignment="Center"
                                        Text="Choose from the list on the left to see file changes and editing options" />
                                </StackPanel>

                                <!--  File Content Editor Area  -->
                                <Grid Visibility="{x:Bind ViewModel.SelectedChangedFile, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}" x:Name="FileContentEditorGrid">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!--  Text Editor Area  -->
                                    <Grid Grid.Row="0" Margin="0,0,0,0">
                                        <!--  Editor Available State (SNBT or direct-editable)  -->
                                        <Grid Visibility="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <!--  Editor Toolbar  -->
                                            <Border
                                                Background="White"
                                                BorderBrush="#E1E1E1"
                                                BorderThickness="0,0,0,1"
                                                Grid.Row="0"
                                                Padding="12,8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <!--  Editor Mode Indicator  -->
                                                    <StackPanel
                                                        Grid.Column="0"
                                                        Orientation="Horizontal"
                                                        Spacing="8">
                                                        <Border
                                                            Background="#E3F2FD"
                                                            CornerRadius="12"
                                                            Padding="8,4">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <FontIcon
                                                                    FontSize="12"
                                                                    Foreground="#2196F3"
                                                                    Glyph="&#xE8A5;" />
                                                                <TextBlock
                                                                    FontSize="11"
                                                                    FontWeight="SemiBold"
                                                                    Foreground="#2196F3"
                                                                    Text="Text Editor" />
                                                            </StackPanel>
                                                        </Border>

                                                        <!--  Modification Indicator  -->
                                                        <Border
                                                            Background="#FFF3CD"
                                                            CornerRadius="12"
                                                            Padding="8,4"
                                                            Visibility="{x:Bind ViewModel.IsFileModified, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                                                            x:Name="ModificationIndicator">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <FontIcon
                                                                    FontSize="10"
                                                                    Foreground="#856404"
                                                                    Glyph="&#xE7C3;" />
                                                                <TextBlock
                                                                    FontSize="11"
                                                                    FontWeight="SemiBold"
                                                                    Foreground="#856404"
                                                                    Text="Modified" />
                                                            </StackPanel>
                                                        </Border>
                                                    </StackPanel>

                                                    <!--  Editor Status  -->
                                                    <StackPanel
                                                        Grid.Column="1"
                                                        HorizontalAlignment="Center"
                                                        Orientation="Horizontal"
                                                        Spacing="16"
                                                        VerticalAlignment="Center">
                                                        <TextBlock
                                                            FontSize="11"
                                                            Foreground="#666666"
                                                            Text="{x:Bind ViewModel.EditorLineCount, Mode=OneWay}"
                                                            x:Name="LineCountDisplay" />
                                                        <TextBlock
                                                            FontSize="11"
                                                            Foreground="#666666"
                                                            Text="{x:Bind ViewModel.EditorLineBase, Mode=OneWay}"
                                                            x:Name="LineBaseDisplay" />
                                                        <TextBlock
                                                            FontSize="11"
                                                            Foreground="#666666"
                                                            Text="{x:Bind ViewModel.EditorCharCount, Mode=OneWay}"
                                                            x:Name="CharCountDisplay" />
                                                        <TextBlock
                                                            FontSize="11"
                                                            Foreground="#666666"
                                                            Text="{x:Bind ViewModel.CurrentCursorPosition, Mode=OneWay}"
                                                            x:Name="CursorPositionDisplay" />
                                                    </StackPanel>

                                                    <!--  Map button to return to region grid  -->
                                                    <StackPanel
                                                        Grid.Column="2"
                                                        Orientation="Horizontal"
                                                        Spacing="8"
                                                        VerticalAlignment="Center">
                                                        <Button
                                                            Click="RegionMapButton_Click"
                                                            Visibility="Collapsed"
                                                            x:Name="RegionMapButton">
                                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                                <FontIcon Glyph="&#xE707;" />
                                                                <TextBlock Text="Map" />
                                                            </StackPanel>
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>

                                            <!--  Text Editor  -->
                                            <!--  Editor surface with padding; no box border  -->
                                            <Grid Background="White" Grid.Row="1">
                                                <!--  Default TextBox editor  -->
                                                <ScrollViewer
                                                    HorizontalScrollBarVisibility="Auto"
                                                    VerticalScrollBarVisibility="Auto"
                                                    ZoomMode="Enabled"
                                                    x:Name="FileTextEditorContainer">
                                                    <TextBox
                                                        AcceptsReturn="True"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        FontFamily="Consolas"
                                                        FontSize="13"
                                                        IsSpellCheckEnabled="False"
                                                        MinHeight="400"
                                                        Padding="16,16,16,24"
                                                        PlaceholderText="File content will appear here when loaded..."
                                                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                        SelectionChanged="TextEditor_SelectionChanged"
                                                        Text="{x:Bind ViewModel.FileContent, Mode=TwoWay}"
                                                        TextChanged="TextEditor_TextChanged"
                                                        TextWrapping="NoWrap"
                                                        x:Name="FileTextEditor" />
                                                </ScrollViewer>

                                                <!--  High-performance editor for large files  -->
                                                <WebView2 Visibility="Collapsed" x:Name="CodeWebView" />

                                                <!--  Region Chunk Map overlay: shown for translated .mca files  -->
                                                <Border
                                                    Background="#1A000000"
                                                    Visibility="Collapsed"
                                                    x:Name="RegionMapOverlay">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="*" />
                                                        </Grid.RowDefinitions>
                                                        <StackPanel
                                                            Margin="12"
                                                            Orientation="Horizontal"
                                                            Spacing="8">
                                                            <FontIcon Glyph="&#xE707;" />
                                                            <TextBlock FontWeight="SemiBold" Text="Region Chunk Map" />
                                                        </StackPanel>
                                                        <!--  Loading / Empty states  -->
                                                        <StackPanel
                                                            Grid.Row="1"
                                                            HorizontalAlignment="Center"
                                                            Spacing="8"
                                                            VerticalAlignment="Center"
                                                            Visibility="{x:Bind ViewModel.IsRegionMapLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                                                            <ProgressRing
                                                                Height="20"
                                                                IsActive="True"
                                                                Width="20" />
                                                            <TextBlock Text="Loading chunks..." />
                                                        </StackPanel>
                                                        <StackPanel
                                                            Grid.Row="1"
                                                            HorizontalAlignment="Center"
                                                            Spacing="8"
                                                            VerticalAlignment="Center"
                                                            Visibility="{x:Bind ViewModel.IsRegionMapEmpty, Converter={StaticResource BoolToVisibilityConverter}}">
                                                            <FontIcon Glyph="&#xE8AC;" />
                                                            <TextBlock Text="No chunks to display." />
                                                        </StackPanel>
                                                        <GridView
                                                            Grid.Row="1"
                                                            IsItemClickEnabled="True"
                                                            ItemClick="RegionChunkGrid_ItemClick"
                                                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                            SelectionMode="None"
                                                            Visibility="{x:Bind ViewModel.IsRegionMapLoading, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                                            x:Name="RegionChunkGrid">
                                                            <GridView.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <ItemsWrapGrid
                                                                        ItemHeight="22"
                                                                        ItemWidth="22"
                                                                        MaximumRowsOrColumns="32"
                                                                        Orientation="Horizontal" />
                                                                </ItemsPanelTemplate>
                                                            </GridView.ItemsPanel>
                                                            <GridView.ItemTemplate>
                                                                <DataTemplate x:DataType="models:ChunkInfo">
                                                                    <Border
                                                                        Background="{x:Bind StatusColor}"
                                                                        Height="20"
                                                                        Width="20" />
                                                                </DataTemplate>
                                                            </GridView.ItemTemplate>
                                                        </GridView>
                                                    </Grid>
                                                </Border>

                                            </Grid>

                                            <!--  Editor Actions  -->
                                            <Border
                                                Background="White"
                                                BorderBrush="#E1E1E1"
                                                BorderThickness="0,1,0,0"
                                                Grid.Row="2"
                                                Padding="12,8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <!--  Validation Status  -->
                                                    <StackPanel
                                                        Grid.Column="0"
                                                        Orientation="Horizontal"
                                                        Spacing="8"
                                                        VerticalAlignment="Center">
                                                        <Border
                                                            Background="{x:Bind ViewModel.ValidationStatus.BackgroundColor, Mode=OneWay}"
                                                            CornerRadius="12"
                                                            Padding="8,4"
                                                            Visibility="{x:Bind ViewModel.ValidationStatus, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                                <FontIcon
                                                                    FontSize="10"
                                                                    Foreground="{x:Bind ViewModel.ValidationStatus.ForegroundColor, Mode=OneWay}"
                                                                    Glyph="{x:Bind ViewModel.ValidationStatus.Icon, Mode=OneWay}" />
                                                                <TextBlock
                                                                    FontSize="11"
                                                                    FontWeight="SemiBold"
                                                                    Foreground="{x:Bind ViewModel.ValidationStatus.ForegroundColor, Mode=OneWay}"
                                                                    Text="{x:Bind ViewModel.ValidationStatus.Message, Mode=OneWay}" />
                                                            </StackPanel>
                                                        </Border>
                                                    </StackPanel>

                                                    <!--  Action Buttons  -->
                                                    <StackPanel
                                                        Grid.Column="2"
                                                        Orientation="Horizontal"
                                                        Spacing="8">
                                                        <Button
                                                            Click="ValidateContent_Click"
                                                            IsEnabled="{x:Bind ViewModel.CanValidate, Mode=OneWay}"
                                                            ToolTipService.ToolTip="Validate syntax"
                                                            x:Name="ValidateButton">
                                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                                <FontIcon FontSize="14" Glyph="&#xE8FB;" />
                                                                <TextBlock FontSize="12" Text="Validate" />
                                                            </StackPanel>
                                                        </Button>
                                                        <Button
                                                            Click="ResetChanges_Click"
                                                            IsEnabled="{x:Bind ViewModel.IsFileModified, Mode=OneWay}"
                                                            ToolTipService.ToolTip="Reset to original content"
                                                            x:Name="ResetChangesButton">
                                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                                <FontIcon FontSize="14" Glyph="&#xE8BB;" />
                                                                <TextBlock FontSize="12" Text="Reset" />
                                                            </StackPanel>
                                                        </Button>
                                                        <Button
                                                            Background="#4CAF50"
                                                            Click="SaveFileChanges_Click"
                                                            Foreground="White"
                                                            IsEnabled="{x:Bind ViewModel.CanSaveFile, Mode=OneWay}"
                                                            ToolTipService.ToolTip="Save changes to file"
                                                            x:Name="SaveFileButton">
                                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                                <FontIcon FontSize="14" Glyph="&#xE74E;" />
                                                                <TextBlock FontSize="12" Text="Save" />
                                                            </StackPanel>
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </Grid>

                                        <!--  Translation Required State (only when not translated and not directly editable)  -->
                                        <Border
                                            Background="#FFF8E1"
                                            BorderBrush="#FFCC02"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="24"
                                            Visibility="{x:Bind GetTranslationRequiredVisibility(ViewModel.SelectedChangedFile)}">
                                            <StackPanel
                                                HorizontalAlignment="Center"
                                                Spacing="16"
                                                VerticalAlignment="Center">
                                                <FontIcon
                                                    FontSize="48"
                                                    Foreground="#FF9800"
                                                    Glyph="&#xE7BA;" />
                                                <TextBlock
                                                    FontSize="18"
                                                    FontWeight="SemiBold"
                                                    HorizontalAlignment="Center"
                                                    Text="Translation Required" />
                                                <TextBlock
                                                    FontSize="14"
                                                    Foreground="#666666"
                                                    HorizontalAlignment="Center"
                                                    Text="This file must be translated from binary format before editing."
                                                    TextAlignment="Center"
                                                    TextWrapping="Wrap" />
                                                <TextBlock
                                                    FontSize="13"
                                                    Foreground="#999999"
                                                    HorizontalAlignment="Center"
                                                    Text="Files are automatically translated after gameplay sessions."
                                                    TextAlignment="Center" />
                                                <!--  Inline translation progress when a translation is running  -->
                                                <StackPanel Spacing="6">
                                                    <Grid ColumnSpacing="8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <ProgressBar
                                                            Height="4"
                                                            Maximum="100"
                                                            Minimum="0"
                                                            Value="0"
                                                            x:Name="TranslateRequiredProgressBar" />
                                                        <TextBlock
                                                            FontSize="11"
                                                            Foreground="#666666"
                                                            Grid.Column="1"
                                                            Text="Idle"
                                                            x:Name="TranslateRequiredProgressText" />
                                                    </Grid>
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="#999999"
                                                        Text="Waiting..."
                                                        x:Name="TranslateRequiredStepText" />
                                                </StackPanel>
                                                <Button
                                                    Background="#FF9800"
                                                    Click="ForceTranslation_Click"
                                                    Foreground="White"
                                                    IsEnabled="{x:Bind ViewModel.CanForceTranslation, Mode=OneWay}"
                                                    Margin="0,8,0,0"
                                                    x:Name="ForceTranslationButton">
                                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                                        <FontIcon FontSize="16" Glyph="&#xE895;" />
                                                        <TextBlock Text="Force Translation" />
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Grid>
                            </Grid>

                        </Grid>

                        <!--  Vertical Splitter  -->
                        <Border
                            Background="#E1E1E1"
                            Grid.Column="1"
                            Margin="8,0,8,0"
                            Visibility="{x:Bind ViewModel.IsSidePanelVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                            Width="1"
                            x:Name="SidePanelSplitter" />

                        <!--  Region Chunk Map overlay moved inside content grid  -->

                        <!--  Right Side Panel: Tools  -->
                        <Grid
                            Grid.Column="2"
                            Margin="8,0,0,0"
                            Visibility="{x:Bind ViewModel.IsSidePanelVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                            x:Name="SidePanelGrid">
                            <Border
                                Background="White"
                                BorderBrush="#E1E1E1"
                                BorderThickness="1"
                                CornerRadius="8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!--  Tools Header  -->
                                    <Border
                                        Background="#F8F9FA"
                                        CornerRadius="8,8,0,0"
                                        Grid.Row="0"
                                        Padding="12,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="SemiBold"
                                                Grid.Column="0"
                                                Text="Editor Tools"
                                                VerticalAlignment="Center" />
                                            <Button
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Click="ToggleSidePanel_Click"
                                                Grid.Column="1"
                                                ToolTipService.ToolTip="Hide tools panel"
                                                x:Name="SidePanelCloseButton">
                                                <FontIcon FontSize="14" Glyph="&#xE76B;" />
                                            </Button>
                                        </Grid>
                                    </Border>

                                    <!--  Tools Content  -->
                                    <ScrollViewer
                                        Grid.Row="1"
                                        Padding="12"
                                        VerticalScrollBarVisibility="Auto">
                                        <StackPanel Spacing="16">
                                            <!--  Navigation Tools  -->
                                            <Border
                                                Background="#F8F9FA"
                                                CornerRadius="8"
                                                Padding="10">
                                                <StackPanel Spacing="12">
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Text="Navigation" />
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="8" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Button
                                                            Click="GoToLine_Click"
                                                            Grid.Column="0"
                                                            HorizontalAlignment="Stretch"
                                                            IsEnabled="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                                                            x:Name="GoToLineButton">
                                                            <StackPanel Spacing="4">
                                                                <FontIcon FontSize="14" Glyph="&#xE8A7;" />
                                                                <TextBlock FontSize="11" Text="Go To Line" />
                                                            </StackPanel>
                                                        </Button>
                                                        <Button
                                                            Click="FindReplace_Click"
                                                            Grid.Column="2"
                                                            HorizontalAlignment="Stretch"
                                                            IsEnabled="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                                                            x:Name="FindReplaceButton">
                                                            <StackPanel Spacing="4">
                                                                <FontIcon FontSize="14" Glyph="&#xE721;" />
                                                                <TextBlock FontSize="11" Text="Find/Replace" />
                                                            </StackPanel>
                                                        </Button>
                                                    </Grid>
                                                </StackPanel>
                                            </Border>

                                            <!--  Format Tools  -->
                                            <Border
                                                Background="#F8F9FA"
                                                CornerRadius="8"
                                                Padding="10">
                                                <StackPanel Spacing="12">
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Text="Format" />
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="8" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Button
                                                            Click="FormatDocument_Click"
                                                            Grid.Column="0"
                                                            HorizontalAlignment="Stretch"
                                                            IsEnabled="{x:Bind ViewModel.CanFormat, Mode=OneWay}"
                                                            x:Name="FormatDocumentButton">
                                                            <StackPanel Spacing="4">
                                                                <FontIcon FontSize="14" Glyph="&#xE8E2;" />
                                                                <TextBlock FontSize="11" Text="Format" />
                                                            </StackPanel>
                                                        </Button>
                                                        <Button
                                                            Click="MinifyDocument_Click"
                                                            Grid.Column="2"
                                                            HorizontalAlignment="Stretch"
                                                            IsEnabled="{x:Bind ViewModel.CanMinify, Mode=OneWay}"
                                                            x:Name="MinifyDocumentButton">
                                                            <StackPanel Spacing="4">
                                                                <FontIcon FontSize="14" Glyph="&#xE8CB;" />
                                                                <TextBlock FontSize="11" Text="Minify" />
                                                            </StackPanel>
                                                        </Button>
                                                    </Grid>
                                                </StackPanel>
                                            </Border>

                                            <!--  File Operations  -->
                                            <Border
                                                Background="#F8F9FA"
                                                CornerRadius="8"
                                                Padding="10">
                                                <StackPanel Spacing="12">
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Text="File Operations" />
                                                    <StackPanel Spacing="8">
                                                        <Button
                                                            Click="ExportFile_Click"
                                                            HorizontalAlignment="Stretch"
                                                            IsEnabled="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                                                            x:Name="ExportFileButton">
                                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                                <FontIcon FontSize="14" Glyph="&#xE8C5;" />
                                                                <TextBlock
                                                                    FontSize="12"
                                                                    Text="Export SNBT"
                                                                    Visibility="{x:Bind ViewModel.SelectedChangedFile.IsTranslated, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                                                                <TextBlock
                                                                    FontSize="12"
                                                                    Text="Export File"
                                                                    Visibility="{x:Bind ViewModel.SelectedChangedFile.IsTranslated, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}" />
                                                            </StackPanel>
                                                        </Button>
                                                        <Button
                                                            Click="ImportFile_Click"
                                                            HorizontalAlignment="Stretch"
                                                            IsEnabled="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                                                            x:Name="ImportFileButton">
                                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                                <FontIcon FontSize="14" Glyph="&#xE8B5;" />
                                                                <TextBlock
                                                                    FontSize="12"
                                                                    Text="Import SNBT"
                                                                    Visibility="{x:Bind ViewModel.SelectedChangedFile.IsTranslated, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                                                                <TextBlock
                                                                    FontSize="12"
                                                                    Text="Import File"
                                                                    Visibility="{x:Bind ViewModel.SelectedChangedFile.IsTranslated, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}" />
                                                            </StackPanel>
                                                        </Button>
                                                        <Button
                                                            Click="ReloadFromDisk_Click"
                                                            HorizontalAlignment="Stretch"
                                                            IsEnabled="{x:Bind ViewModel.SelectedChangedFile, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                                                            x:Name="ReloadFromDiskButton">
                                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                                <FontIcon FontSize="14" Glyph="&#xE72C;" />
                                                                <TextBlock FontSize="12" Text="Reload from Disk" />
                                                            </StackPanel>
                                                        </Button>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>

                                            <!--  Syntax Highlighting  -->
                                            <Border
                                                Background="#F8F9FA"
                                                CornerRadius="8"
                                                Padding="10">
                                                <StackPanel Spacing="12">
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Text="View Options" />
                                                    <StackPanel Spacing="8">
                                                        <ToggleSwitch
                                                            Header="Syntax Highlighting"
                                                            IsEnabled="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                                                            IsOn="{x:Bind ViewModel.IsSyntaxHighlightingEnabled, Mode=TwoWay}"
                                                            x:Name="SyntaxHighlightingToggle" />
                                                        <ToggleSwitch
                                                            Header="Line Numbers"
                                                            IsEnabled="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                                                            IsOn="{x:Bind ViewModel.AreLineNumbersVisible, Mode=TwoWay}"
                                                            x:Name="LineNumbersToggle" />
                                                        <ToggleSwitch
                                                            Header="Word Wrap"
                                                            IsEnabled="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                                                            IsOn="{x:Bind ViewModel.IsWordWrapEnabled, Mode=TwoWay}"
                                                            Toggled="WordWrapToggle_Toggled"
                                                            x:Name="WordWrapToggle" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>

                                            <!--  Font Settings  -->
                                            <Border
                                                Background="#F8F9FA"
                                                CornerRadius="8"
                                                Padding="12">
                                                <StackPanel Spacing="12">
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Text="Font Settings" />
                                                    <StackPanel Spacing="8">
                                                        <ComboBox
                                                            Header="Font Family"
                                                            IsEnabled="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                                                            SelectedItem="{x:Bind ViewModel.SelectedFontFamily, Mode=OneWay}"
                                                            SelectionChanged="FontFamilyComboBox_SelectionChanged"
                                                            Width="220"
                                                            x:Name="FontFamilyComboBox">
                                                            <x:String>Consolas</x:String>
                                                            <x:String>Courier New</x:String>
                                                            <x:String>Cascadia Code</x:String>
                                                            <x:String>Cascadia Mono</x:String>
                                                            <x:String>Fira Code</x:String>
                                                        </ComboBox>
                                                        <ComboBox
                                                            Header="Font Size"
                                                            IsEnabled="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                                                            SelectedItem="{x:Bind ViewModel.EditorFontSize, Mode=OneWay}"
                                                            SelectionChanged="FontSizeComboBox_SelectionChanged"
                                                            Width="220"
                                                            x:Name="FontSizeComboBox">
                                                            <x:Double>8</x:Double>
                                                            <x:Double>9</x:Double>
                                                            <x:Double>10</x:Double>
                                                            <x:Double>11</x:Double>
                                                            <x:Double>12</x:Double>
                                                            <x:Double>13</x:Double>
                                                            <x:Double>14</x:Double>
                                                            <x:Double>15</x:Double>
                                                            <x:Double>16</x:Double>
                                                            <x:Double>17</x:Double>
                                                            <x:Double>18</x:Double>
                                                            <x:Double>19</x:Double>
                                                            <x:Double>20</x:Double>
                                                            <x:Double>21</x:Double>
                                                            <x:Double>22</x:Double>
                                                            <x:Double>23</x:Double>
                                                            <x:Double>24</x:Double>
                                                        </ComboBox>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Grid>

                <!-- Translation In Progress Overlay for Right Panel (disabled; replaced by full-width overlay) -->
                <Grid Visibility="Collapsed"
                    Background="White">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <Border
                                Background="#F8F9FA"
                                BorderBrush="#E1E1E1"
                                BorderThickness="0,0,0,1"
                                Grid.Row="0"
                                Padding="16,12">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                    <Border
                                        Background="#FFE4E1"
                                        BorderBrush="#FFA07A"
                                        BorderThickness="2"
                                        CornerRadius="20"
                                        Height="40"
                                        Width="40">
                                        <FontIcon
                                            FontSize="20"
                                            Foreground="#DC143C"
                                            Glyph="&#xE7BA;"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center" />
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Text="Editor Unavailable" />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="#666666"
                                            Text="Waiting for file processing to complete..." />
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Processing Content Area -->
                            <ScrollViewer Grid.Row="1" Padding="16">
                                <StackPanel Spacing="20">
                                    <!-- Processing Status -->
                                    <Border
                                        Background="#FFF5F5"
                                        BorderBrush="#FEB2B2"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="16">
                                        <StackPanel Spacing="12">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon
                                                    FontSize="16"
                                                    Foreground="#DC143C"
                                                    Glyph="&#xE946;" />
                                                <TextBlock
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    Text="File Editor Temporarily Disabled" />
                                            </StackPanel>

                                            <TextBlock
                                                FontSize="12"
                                                Foreground="#666666"
                                                TextWrapping="Wrap"
                                                Text="The file editor is temporarily unavailable while GitMC processes and converts files to SNBT format. Once the translation process is complete, you'll be able to view and edit files here." />
                                        </StackPanel>
                                    </Border>

                                    <!-- Progress Information -->
                                    <StackPanel Spacing="12">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Text="Processing Progress" />

                                        <StackPanel Spacing="8">
                                            <ProgressBar
                                                Height="8"
                                                Value="{Binding TranslationProgressValue, Mode=OneWay}"
                                                Maximum="100"
                                                Minimum="0" />

                                            <Grid>
                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="#666666"
                                                    HorizontalAlignment="Left"
                                                    Text="{Binding TranslationProgressMessage, Mode=OneWay}" />

                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="#666666"
                                                    HorizontalAlignment="Right"
                                                    Text="{Binding TranslationProgressValue, Mode=OneWay, Converter={StaticResource DoubleToPercentageConverter}}" />
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Editor Features Preview -->
                                    <StackPanel Spacing="12">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Text="Available Editor Features" />

                                        <Border
                                            Background="#F0F8FF"
                                            BorderBrush="#B8D4F1"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="16">
                                            <StackPanel Spacing="12">
                                                <TextBlock
                                                    FontSize="12"
                                                    FontWeight="SemiBold"
                                                    Text="Once processing is complete, you'll have access to:" />
                                                <StackPanel Spacing="8">
                                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                                        <FontIcon FontSize="14" Foreground="#0066CC" Glyph="&#xE73E;" />
                                                        <StackPanel>
                                                            <TextBlock FontSize="12" FontWeight="SemiBold" Text="Syntax Highlighting" />
                                                            <TextBlock FontSize="11" Foreground="#666666" Text="Color-coded SNBT syntax for better readability" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                                        <FontIcon FontSize="14" Foreground="#0066CC" Glyph="&#xE8E2;" />
                                                        <StackPanel>
                                                            <TextBlock FontSize="12" FontWeight="SemiBold" Text="Code Formatting" />
                                                            <TextBlock FontSize="11" Foreground="#666666" Text="Auto-format and validate SNBT structures" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                                        <FontIcon FontSize="14" Foreground="#0066CC" Glyph="&#xE8C5;" />
                                                        <StackPanel>
                                                            <TextBlock FontSize="12" FontWeight="SemiBold" Text="Import/Export" />
                                                            <TextBlock FontSize="11" Foreground="#666666" Text="Save and load SNBT files for external editing" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                                        <FontIcon FontSize="14" Foreground="#0066CC" Glyph="&#xE8CB;" />
                                                        <StackPanel>
                                                            <TextBlock FontSize="12" FontWeight="SemiBold" Text="Code Tools" />
                                                            <TextBlock FontSize="11" Foreground="#666666" Text="Minify, beautify, and validate your code" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>

                                    <!-- Processing Details -->
                                    <StackPanel Spacing="12">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Text="What's Being Processed" />

                                        <Border
                                            Background="#F8F9FA"
                                            BorderBrush="#E1E1E1"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="16">
                                            <StackPanel Spacing="10">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <FontIcon FontSize="12" Foreground="#28A745" Glyph="&#xE930;" />
                                                    <TextBlock FontSize="11" Text="Binary NBT files → Human-readable SNBT format" />
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <FontIcon FontSize="12" Foreground="#28A745" Glyph="&#xE930;" />
                                                    <TextBlock FontSize="11" Text="File metadata and structure analysis" />
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <FontIcon FontSize="12" Foreground="#28A745" Glyph="&#xE930;" />
                                                    <TextBlock FontSize="11" Text="Validation and integrity checking" />
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <FontIcon FontSize="12" Foreground="#28A745" Glyph="&#xE930;" />
                                                    <TextBlock FontSize="11" Text="Git-friendly formatting optimization" />
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>

                                    <!-- Tips Section -->
                                    <Border
                                        Background="#E8F5E8"
                                        BorderBrush="#C3E6CB"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="16">
                                        <StackPanel Spacing="8">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon
                                                    FontSize="16"
                                                    Foreground="#155724"
                                                    Glyph="&#xE946;" />
                                                <TextBlock
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    Foreground="#155724"
                                                    Text="Pro Tip" />
                                            </StackPanel>

                                            <TextBlock
                                                FontSize="12"
                                                Foreground="#155724"
                                                TextWrapping="Wrap"
                                                Text="The conversion process makes your Minecraft save files version-controllable with Git, allowing you to track changes, create backups, and collaborate on world modifications more effectively." />
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>                            <!-- Footer with Status -->
                            <Border
                                Background="#F8F9FA"
                                BorderBrush="#E1E1E1"
                                BorderThickness="0,1,0,0"
                                Grid.Row="2"
                                Padding="16,8">
                                <TextBlock
                                    FontSize="11"
                                    Foreground="#666666"
                                    HorizontalAlignment="Center"
                                    Text="File content will be loaded automatically once processing is complete" />
                            </Border>
                        </Grid>
                    </Grid>

                    <!-- Full-width Translation Overlay spanning both columns -->
                    <Grid Grid.ColumnSpan="3"
                          Visibility="{Binding ShowTranslationInProgress, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                          Background="White">
                        <!-- Centered content container -->
                        <Border HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="600" Padding="32">
                            <StackPanel Spacing="24">
                                <!-- Header with icon -->
                                <StackPanel Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center">
                                    <Border Background="#E3F2FD" BorderBrush="#C8E6FA" BorderThickness="2" CornerRadius="24" Height="48" Width="48">
                                        <FontIcon FontSize="24" Foreground="#2196F3" Glyph="&#xE8AB;" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock FontSize="20" FontWeight="SemiBold" Text="Processing Files" />
                                        <TextBlock FontSize="14" Foreground="#666666" Text="Converting files to SNBT format..." />
                                    </StackPanel>
                                </StackPanel>

                                <!-- Progress Information -->
                                <StackPanel Spacing="12">
                                    <TextBlock FontSize="16" FontWeight="SemiBold" Text="Current Progress" HorizontalAlignment="Center" />
                                    <ProgressBar Height="8" Value="{Binding TranslationProgressValue, Mode=OneWay}" Maximum="100" Minimum="0" />
                                    <Grid>
                                        <TextBlock FontSize="12" Foreground="#666666" HorizontalAlignment="Left" Text="{Binding TranslationProgressMessage, Mode=OneWay}" />
                                        <TextBlock FontSize="12" Foreground="#666666" HorizontalAlignment="Right" Text="{Binding TranslationProgressValue, Mode=OneWay, Converter={StaticResource DoubleToPercentageConverter}}" />
                                    </Grid>
                                </StackPanel>

                                <!-- Status Information -->
                                <Border Background="#FFF8E1" BorderBrush="#FFE082" BorderThickness="1" CornerRadius="8" Padding="16">
                                    <StackPanel Spacing="12">
                                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                            <FontIcon FontSize="16" Foreground="#FF8F00" Glyph="&#xE946;" />
                                            <TextBlock FontSize="14" FontWeight="SemiBold" Text="What's happening?" />
                                        </StackPanel>
                                        <TextBlock FontSize="13" Foreground="#666666" TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"
                                                   Text="GitMC is processing changed files and converting them from binary NBT to human-readable SNBT format. This makes your Minecraft save data version-controllable with Git." />
                                    </StackPanel>
                                </Border>

                                <!-- Footer Note -->
                                <TextBlock FontSize="12" Foreground="#666666" HorizontalAlignment="Center" TextAlignment="Center"
                                           Text="Changed files and editor will be available once processing is complete" />
                            </StackPanel>
                        </Border>
                    </Grid>
                    <TextBlock
                        HorizontalAlignment="Center"
                        Text="Analytics tab content - Coming soon"
                        VerticalAlignment="Center"
                        Visibility="Collapsed"
                        x:Name="AnalyticsContent" />

                    <!--  Settings Tab Content  -->
                    <Grid Visibility="Collapsed" x:Name="SettingsContent">
                        <Border
                            Background="White"
                            BorderBrush="#E1E1E1"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
                            <StackPanel Spacing="16">
                                <TextBlock
                                    FontSize="18"
                                    FontWeight="SemiBold"
                                    Text="Save Settings" />
                                <StackPanel Spacing="8">
                                    <ToggleSwitch
                                        Header="Auto-translate when world is idle"
                                        IsOn="{x:Bind ViewModel.SaveInfo.AutoTranslateOnIdle, Mode=TwoWay}"
                                        Toggled="AutoTranslateToggle_Toggled"
                                        x:Name="AutoTranslateToggle" />
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#666666"
                                        Text="When enabled, GitMC will translate changes automatically once the game releases file locks." />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid></Grid>
</Page>
