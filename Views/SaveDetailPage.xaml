                                                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                    Text="by player1 • 2 weeks ago" />
                                                            </StackPanel>

                                                            <Border
                                                                Grid.Column="1"
                                                                Padding="8,3"
                                                                VerticalAlignment="Center"
                                                                Background="{ThemeResource SystemFillColorCriticalBrush}"
                                                                CornerRadius="12">
                                                                <TextBlock
                                                                    FontSize="12"
                                                                    FontWeight="SemiBold"
                                                                    Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                                                                    Text="closed" />
                                                            </Border>
                                                        </Grid>
                                                    </Border>
                                                </StackPanel>
                                            </ScrollViewer>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </ScrollViewer>

                <!--  Other Tab Contents (Hidden by default)  -->
                <TextBlock
                    x:Name="FilesContent"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="Files tab content - Coming soon"
                    Visibility="Collapsed" />

                <TextBlock
                    x:Name="HistoryContent"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="History tab content - Coming soon"
                    Visibility="Collapsed" />

                <!--  Changes Tab Content  -->
                <Grid x:Name="ChangesContent" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="360" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Left Panel: Changed Files and Commit Panel  -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition x:Name="ChangedFilesRowDefinition" Height="*" />
                            <RowDefinition Height="8" />
                            <RowDefinition x:Name="CommitSectionRowDefinition" Height="Auto" />
                        </Grid.RowDefinitions>
                        <!--  Changed Files List with Flexible Height  -->
                        <Border
                            Grid.Row="0"
                            Background="White"
                            BorderBrush="#E1E1E1"
                            BorderThickness="1"
                            CornerRadius="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--  Header  -->
                                <Border
                                    Grid.Row="0"
                                    Padding="12,8"
                                    Background="#F8F9FA"
                                    CornerRadius="8,8,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Text="Changed Files" />
                                        <Button
                                            x:Name="RefreshChangesButton"
                                            Grid.Column="1"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="RefreshChanges_Click">
                                            <FontIcon FontSize="14" Glyph="&#xE72C;" />
                                        </Button>
                                    </Grid>
                                </Border>

                                <!--  File Groups List with Scrolling  -->
                                <ScrollViewer
                                    x:Name="ChangedFilesScrollViewer"
                                    Grid.Row="1"
                                    Padding="8"
                                    HorizontalScrollBarVisibility="Disabled"
                                    VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{x:Bind ViewModel.ChangedFileGroups}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="models:ChangedFileGroup">
                                                <Expander
                                                    Margin="0,2"
                                                    HorizontalAlignment="Stretch"
                                                    HorizontalContentAlignment="Stretch"
                                                    IsExpanded="{x:Bind IsExpanded, Mode=TwoWay}">
                                                    <Expander.Header>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="8" />
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>
                                                            <FontIcon
                                                                Grid.Column="0"
                                                                VerticalAlignment="Center"
                                                                FontSize="14"
                                                                Foreground="#666666"
                                                                Glyph="{x:Bind CategoryIcon}" />
                                                            <TextBlock
                                                                Grid.Column="2"
                                                                VerticalAlignment="Center"
                                                                FontWeight="SemiBold"
                                                                Text="{x:Bind CategoryName}" />
                                                            <TextBlock
                                                                Grid.Column="3"
                                                                VerticalAlignment="Center"
                                                                FontSize="11"
                                                                Foreground="#666666"
                                                                Text="{x:Bind FileCount}" />
                                                        </Grid>
                                                    </Expander.Header>
                                                    <ListView
                                                        x:Name="ChangedFilesList"
                                                        HorizontalAlignment="Stretch"
                                                        HorizontalContentAlignment="Stretch"
                                                        ItemsSource="{x:Bind Files}"
                                                        SelectionChanged="ChangedFiles_SelectionChanged"
                                                        SelectionMode="Single">
                                                        <ListView.ItemTemplate>
                                                            <DataTemplate x:DataType="models:ChangedFile">
                                                                <Grid
                                                                    Margin="0,1"
                                                                    Padding="6"
                                                                    HorizontalAlignment="Stretch"
                                                                    Background="Transparent">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="8" />
                                                                        <ColumnDefinition Width="*" />
                                                                        <ColumnDefinition Width="Auto" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <FontIcon
                                                                        Grid.Column="0"
                                                                        VerticalAlignment="Center"
                                                                        FontSize="12"
                                                                        Foreground="{x:Bind StatusColor}"
                                                                        Glyph="{x:Bind IconGlyph}" />
                                                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                                        <TextBlock
                                                                            FontSize="12"
                                                                            Text="{x:Bind FileName}"
                                                                            TextTrimming="CharacterEllipsis" />
                                                                        <TextBlock
                                                                            FontSize="10"
                                                                            Foreground="#666666"
                                                                            Text="{x:Bind DisplaySize}"
                                                                            Visibility="{x:Bind ChunkCount, Converter={StaticResource IntToVisibilityConverter}}" />
                                                                    </StackPanel>
                                                                    <Border
                                                                        Grid.Column="3"
                                                                        Padding="6,2"
                                                                        Background="{x:Bind StatusColor}"
                                                                        CornerRadius="8">
                                                                        <TextBlock
                                                                            FontSize="9"
                                                                            FontWeight="SemiBold"
                                                                            Foreground="White"
                                                                            Text="{x:Bind StatusText}" />
                                                                    </Border>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ListView.ItemTemplate>
                                                    </ListView>
                                                </Expander>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!--  Commit Panel (Collapsible)  -->
                        <Border
                            x:Name="CommitSectionBorder"
                            Grid.Row="2"
                            Background="White"
                            BorderBrush="#E1E1E1"
                            BorderThickness="1"
                            CornerRadius="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition x:Name="CommitContentRowDefinition" Height="Auto" />
                                    <RowDefinition x:Name="CommitActionsRowDefinition" Height="Auto" />
                                </Grid.RowDefinitions>

                                <!--  Commit Header with Collapse Button  -->
                                <Border
                                    Grid.Row="0"
                                    Padding="12,8"
                                    Background="#F8F9FA"
                                    CornerRadius="8,8,0,0">
                                    <Button
                                        x:Name="CommitSectionToggleButton"
                                        Padding="0"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Stretch"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="ToggleCommitSection_Click">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Text="Commit Changes" />
                                            <FontIcon
                                                x:Name="CommitSectionCollapseIcon"
                                                Grid.Column="1"
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Glyph="&#xE70D;"
                                                RenderTransformOrigin="0.5,0.5">
                                                <FontIcon.RenderTransform>
                                                    <RotateTransform x:Name="CommitSectionCollapseIconTransform" />
                                                </FontIcon.RenderTransform>
                                            </FontIcon>
                                        </Grid>
                                    </Button>
                                </Border>

                                <!--  Commit Form (Collapsible Content)  -->
                                <StackPanel
                                    x:Name="CommitFormContent"
                                    Grid.Row="1"
                                    Margin="12"
                                    Spacing="8"
                                    Visibility="Visible">
                                    <TextBox
                                        x:Name="CommitMessageTextBox"
                                        Header="Summary"
                                        PlaceholderText="Enter commit message..."
                                        Text="{x:Bind ViewModel.CommitMessage, Mode=TwoWay}" />
                                    <TextBox
                                        x:Name="CommitDescriptionTextBox"
                                        Height="72"
                                        AcceptsReturn="True"
                                        Header="Description (optional)"
                                        PlaceholderText="Provide additional details about your changes..."
                                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                                        Text="{x:Bind ViewModel.CommitDescription, Mode=TwoWay}"
                                        TextWrapping="Wrap" />
                                </StackPanel>

                                <!--  Commit Actions (Collapsible Content)  -->
                                <Border
                                    x:Name="CommitActionsContent"
                                    Grid.Row="2"
                                    Padding="12,8"
                                    BorderBrush="#E1E1E1"
                                    BorderThickness="0,1,0,0"
                                    Visibility="Visible">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Button
                                            x:Name="CommitButton"
                                            Grid.Column="0"
                                            HorizontalAlignment="Stretch"
                                            Background="#2196F3"
                                            Click="CommitChanges_Click"
                                            Foreground="White"
                                            IsEnabled="{x:Bind ViewModel.IsCommitInProgress, Converter={StaticResource BoolNegationConverter}}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon FontSize="16" Glyph="&#xE74E;" />
                                                <TextBlock Text="Commit" />
                                            </StackPanel>
                                        </Button>
                                        <Button
                                            x:Name="CommitAndPushButton"
                                            Grid.Column="2"
                                            HorizontalAlignment="Stretch"
                                            Background="#4CAF50"
                                            Click="CommitAndPushChanges_Click"
                                            Foreground="White"
                                            IsEnabled="{x:Bind ViewModel.IsCommitInProgress, Converter={StaticResource BoolNegationConverter}}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <FontIcon FontSize="16" Glyph="&#xE898;" />
                                                <TextBlock Text="Commit &amp; Push" />
                                            </StackPanel>
                                        </Button>
                                        <Button x:Name="CommitOptionsButton" Grid.Column="4">
                                            <FontIcon FontSize="14" Glyph="&#xE712;" />
                                        </Button>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>

                    <!--  Splitter  -->
                    <Border
                        Grid.Column="1"
                        Width="1"
                        Background="#E1E1E1" />

                    <!--  Right Panel: File Content Editor  -->
            <Grid Grid.Column="2" Loaded="EditorAreaGrid_Loaded">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                <!-- Start collapsed; code-behind will toggle between 0 and 280 based on IsSidePanelVisible -->
                <ColumnDefinition x:Name="SidePanelColumn" Width="0" />
                        </Grid.ColumnDefinitions>

                        <!--  Main Content Area  -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  File Editor Header  -->
                            <Border
                                Grid.Row="0"
                                Padding="12,8"
                                Background="White"
                                BorderBrush="#E1E1E1"
                                BorderThickness="1"
                                CornerRadius="8,8,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Text="{x:Bind ViewModel.SelectedChangedFile.FileName, Mode=OneWay, FallbackValue='Select a file to view and edit'}" />
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <TextBlock FontSize="10" Foreground="#666666" TextTrimming="CharacterEllipsis"
                                                       Text="{x:Bind ViewModel.SelectedChangedFile.RelativePath, Mode=OneWay}" />
                                            <Border Padding="6,2" Background="{x:Bind ViewModel.SelectedChangedFile.StatusColor, Mode=OneWay}" CornerRadius="6">
                                                <TextBlock FontSize="9" FontWeight="SemiBold" Foreground="White" Text="{x:Bind ViewModel.SelectedChangedFile.StatusText, Mode=OneWay}" />
                                            </Border>
                                            <TextBlock FontSize="10" Foreground="#666666" Text="{x:Bind ViewModel.SelectedChangedFile.DisplaySize, Mode=OneWay}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!--  Translation Status Badge  -->
                                    <Border
                                        x:Name="TranslatedBadge"
                                        Grid.Column="1"
                                        Padding="8,4"
                                        Background="#4CAF50"
                                        CornerRadius="12"
                                        Visibility="{x:Bind ViewModel.SelectedChangedFile.IsTranslated, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                            <FontIcon
                                                FontSize="12"
                                                Foreground="White"
                                                Glyph="&#xE73E;" />
                                            <TextBlock
                                                FontSize="11"
                                                FontWeight="SemiBold"
                                                Foreground="White"
                                                Text="Translated" />
                                        </StackPanel>
                                    </Border>

                                    <!--  Toggle Side Panel Button  -->
                                    <Button
                                        x:Name="ToggleSidePanelButton"
                                        Grid.Column="3"
                                        Click="ToggleSidePanel_Click">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon
                                                x:Name="SidePanelToggleIcon"
                                                FontSize="14"
                                                Glyph="&#xE76F;" />
                                            <TextBlock Text="Tools" />
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </Border>

                            <!--  File Content Area  -->
                            <Border
                                Grid.Row="1"
                                Background="White"
                                BorderBrush="#E1E1E1"
                                BorderThickness="1,0,1,1"
                                CornerRadius="0,0,8,8">
                                <Grid>
                                    <!--  Default State: No File Selected  -->
                                    <StackPanel
                                        x:Name="NoFileSelectedPanel"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Spacing="16"
                                        Visibility="{x:Bind ViewModel.SelectedChangedFile, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                                        <FontIcon
                                            FontSize="48"
                                            Foreground="#CCCCCC"
                                            Glyph="&#xE8A5;" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="18"
                                            Foreground="#666666"
                                            Text="Select a changed file to view details" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="14"
                                            Foreground="#999999"
                                            Text="Choose from the list on the left to see file changes and editing options" />
                                    </StackPanel>

                                    <!--  File Content Editor Area  -->
                                    <Grid x:Name="FileContentEditorGrid" Visibility="{x:Bind ViewModel.SelectedChangedFile, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <!--  Text Editor Area  -->
                                        <Grid Grid.Row="0" Margin="16,0,16,16">
                                            <!--  Editor Available State (SNBT or direct-editable)  -->
                                            <Grid Visibility="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>

                                                <!--  Editor Toolbar  -->
                                                <Border
                                                    Grid.Row="0"
                                                    Padding="12,8"
                                                    Background="White"
                                                    BorderBrush="#E1E1E1"
                                                    BorderThickness="1,1,1,0"
                                                    CornerRadius="8,8,0,0">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <!--  Editor Mode Indicator  -->
                                                        <StackPanel
                                                            Grid.Column="0"
                                                            Orientation="Horizontal"
                                                            Spacing="8">
                                                            <Border
                                                                Padding="8,4"
                                                                Background="#E3F2FD"
                                                                CornerRadius="12">
                                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                                    <FontIcon
                                                                        FontSize="12"
                                                                        Foreground="#2196F3"
                                                                        Glyph="&#xE8A5;" />
                                                                    <TextBlock
                                                                        FontSize="11"
                                                                        FontWeight="SemiBold"
                                                                        Foreground="#2196F3"
                                                                        Text="Text Editor" />
                                                                </StackPanel>
                                                            </Border>

                                                            <!--  Modification Indicator  -->
                                                            <Border
                                                                x:Name="ModificationIndicator"
                                                                Padding="8,4"
                                                                Background="#FFF3CD"
                                                                CornerRadius="12"
                                                                Visibility="{x:Bind ViewModel.IsFileModified, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                                    <FontIcon
                                                                        FontSize="10"
                                                                        Foreground="#856404"
                                                                        Glyph="&#xE7C3;" />
                                                                    <TextBlock
                                                                        FontSize="11"
                                                                        FontWeight="SemiBold"
                                                                        Foreground="#856404"
                                                                        Text="Modified" />
                                                                </StackPanel>
                                                            </Border>
                                                        </StackPanel>

                                                        <!--  Editor Status  -->
                                                        <StackPanel
                                                            Grid.Column="1"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Orientation="Horizontal"
                                                            Spacing="16">
                                                            <TextBlock
                                                                x:Name="LineCountDisplay"
                                                                FontSize="11"
                                                                Foreground="#666666"
                                                                Text="{x:Bind ViewModel.EditorLineCount, Mode=OneWay}" />
                                                            <TextBlock
                                                                x:Name="CharCountDisplay"
                                                                FontSize="11"
                                                                Foreground="#666666"
                                                                Text="{x:Bind ViewModel.EditorCharCount, Mode=OneWay}" />
                                                            <TextBlock
                                                                x:Name="CursorPositionDisplay"
                                                                FontSize="11"
                                                                Foreground="#666666"
                                                                Text="{x:Bind ViewModel.CurrentCursorPosition, Mode=OneWay}" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>

                                                <!--  Text Editor  -->
                                                <Border
                                                    Grid.Row="1"
                                                    Background="White"
                                                    BorderBrush="#E1E1E1"
                                                    BorderThickness="1,0,1,0">
                                                    <ScrollViewer
                                                        HorizontalScrollBarVisibility="Auto"
                                                        VerticalScrollBarVisibility="Auto"
                                                        ZoomMode="Enabled">
                                                        <TextBox
                                                            x:Name="FileTextEditor"
                                                            MinHeight="400"
                                                            Padding="16"
                                                            AcceptsReturn="True"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            FontFamily="Consolas"
                                                            FontSize="13"
                                                            IsSpellCheckEnabled="False"
                                                            PlaceholderText="File content will appear here when loaded..."
                                                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                            SelectionChanged="TextEditor_SelectionChanged"
                                                            Text="{x:Bind ViewModel.FileContent, Mode=TwoWay}"
                                                            TextChanged="TextEditor_TextChanged"
                                                            TextWrapping="NoWrap" />
                                                    </ScrollViewer>
                                                </Border>

                                                <!--  Editor Actions  -->
                                                <Border
                                                    Grid.Row="2"
                                                    Padding="12,8"
                                                    Background="White"
                                                    BorderBrush="#E1E1E1"
                                                    BorderThickness="1,0,1,1"
                                                    CornerRadius="0,0,8,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <!--  Validation Status  -->
                                                        <StackPanel
                                                            Grid.Column="0"
                                                            VerticalAlignment="Center"
                                                            Orientation="Horizontal"
                                                            Spacing="8">
                                                            <Border
                                                                Padding="8,4"
                                                                Background="{x:Bind ViewModel.ValidationStatus.BackgroundColor, Mode=OneWay}"
                                                                CornerRadius="12"
                                                                Visibility="{x:Bind ViewModel.ValidationStatus, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                                    <FontIcon
                                                                        FontSize="10"
                                                                        Foreground="{x:Bind ViewModel.ValidationStatus.ForegroundColor, Mode=OneWay}"
                                                                        Glyph="{x:Bind ViewModel.ValidationStatus.Icon, Mode=OneWay}" />
                                                                    <TextBlock
                                                                        FontSize="11"
                                                                        FontWeight="SemiBold"
                                                                        Foreground="{x:Bind ViewModel.ValidationStatus.ForegroundColor, Mode=OneWay}"
                                                                        Text="{x:Bind ViewModel.ValidationStatus.Message, Mode=OneWay}" />
                                                                </StackPanel>
                                                            </Border>
                                                        </StackPanel>

                                                        <!--  Action Buttons  -->
                                                        <StackPanel
                                                            Grid.Column="2"
                                                            Orientation="Horizontal"
                                                            Spacing="8">
                                                            <Button
                                                                x:Name="ValidateButton"
                                                                Click="ValidateContent_Click"
                                                                IsEnabled="{x:Bind ViewModel.CanValidate, Mode=OneWay}"
                                                                ToolTipService.ToolTip="Validate syntax">
                                                                <StackPanel Orientation="Horizontal" Spacing="6">
                                                                    <FontIcon FontSize="14" Glyph="&#xE8FB;" />
                                                                    <TextBlock FontSize="12" Text="Validate" />
                                                                </StackPanel>
                                                            </Button>
                                                            <Button
                                                                x:Name="ResetChangesButton"
                                                                Click="ResetChanges_Click"
                                                                IsEnabled="{x:Bind ViewModel.IsFileModified, Mode=OneWay}"
                                                                ToolTipService.ToolTip="Reset to original content">
                                                                <StackPanel Orientation="Horizontal" Spacing="6">
                                                                    <FontIcon FontSize="14" Glyph="&#xE8BB;" />
                                                                    <TextBlock FontSize="12" Text="Reset" />
                                                                </StackPanel>
                                                            </Button>
                                                            <Button
                                                                x:Name="SaveFileButton"
                                                                Background="#4CAF50"
                                                                Click="SaveFileChanges_Click"
                                                                Foreground="White"
                                                                IsEnabled="{x:Bind ViewModel.CanSaveFile, Mode=OneWay}"
                                                                ToolTipService.ToolTip="Save changes to file">
                                                                <StackPanel Orientation="Horizontal" Spacing="6">
                                                                    <FontIcon FontSize="14" Glyph="&#xE74E;" />
                                                                    <TextBlock FontSize="12" Text="Save" />
                                                                </StackPanel>
                                                            </Button>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </Grid>

                                            <!--  Translation Required State (when no editable path available)  -->
                                            <Border
                                                Padding="32"
                                                Background="#FFF8E1"
                                                BorderBrush="#FFCC02"
                                                BorderThickness="2"
                                                CornerRadius="8"
                                                Visibility="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">
                                                <StackPanel
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Spacing="16">
                                                    <FontIcon
                                                        FontSize="48"
                                                        Foreground="#FF9800"
                                                        Glyph="&#xE7BA;" />
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        FontSize="18"
                                                        FontWeight="SemiBold"
                                                        Text="Translation Required" />
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        FontSize="14"
                                                        Foreground="#666666"
                                                        Text="This file must be translated from binary format before editing."
                                                        TextAlignment="Center"
                                                        TextWrapping="Wrap" />
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        FontSize="13"
                                                        Foreground="#999999"
                                                        Text="Files are automatically translated after gameplay sessions."
                                                        TextAlignment="Center" />
                                                    <Button
                                                        x:Name="ForceTranslationButton"
                                                        Margin="0,8,0,0"
                                                        Background="#FF9800"
                                                        Click="ForceTranslation_Click"
                                                        Foreground="White"
                                                        IsEnabled="{x:Bind ViewModel.CanForceTranslation, Mode=OneWay}">
                                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                                            <FontIcon FontSize="16" Glyph="&#xE895;" />
                                                            <TextBlock Text="Force Translation" />
                                                        </StackPanel>
                                                    </Button>
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>

                        <!--  Vertical Splitter  -->
                        <Border
                            x:Name="SidePanelSplitter"
                            Grid.Column="1"
                            Width="1"
                            Background="#E1E1E1"
                            Margin="8,0,8,0"
                            Visibility="{x:Bind ViewModel.IsSidePanelVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />

                        <!--  Right Side Panel: Tools  -->
                        <Grid
                            x:Name="SidePanelGrid"
                            Grid.Column="2"
                            Margin="8,0,0,0"
                            Visibility="{x:Bind ViewModel.IsSidePanelVisible, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Border
                                Background="White"
                                BorderBrush="#E1E1E1"
                                BorderThickness="1"
                                CornerRadius="8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!--  Tools Header  -->
                                    <Border
                                        Grid.Row="0"
                                        Padding="12,8"
                                        Background="#F8F9FA"
                                        CornerRadius="8,8,0,0">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                FontWeight="SemiBold"
                                                Text="Editor Tools" />
                                            <Button
                                                x:Name="SidePanelCloseButton"
                                                Grid.Column="1"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Click="ToggleSidePanel_Click"
                                                ToolTipService.ToolTip="Hide tools panel">
                                                <FontIcon FontSize="14" Glyph="&#xE76B;" />
                                            </Button>
                                        </Grid>
                                    </Border>

                                    <!--  Tools Content  -->
                                    <ScrollViewer
                                        Grid.Row="1"
                                        Padding="12"
                                        VerticalScrollBarVisibility="Auto">
                                        <StackPanel Spacing="16">
                                            <!--  Navigation Tools  -->
                                            <Border
                                                Padding="10"
                                                Background="#F8F9FA"
                                                CornerRadius="8">
                                                <StackPanel Spacing="12">
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Text="Navigation" />
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="8" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Button
                                                            x:Name="GoToLineButton"
                                                            Grid.Column="0"
                                                            HorizontalAlignment="Stretch"
                                                            Click="GoToLine_Click"
                                                            IsEnabled="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}">
                                                            <StackPanel Spacing="4">
                                                                <FontIcon FontSize="14" Glyph="&#xE8A7;" />
                                                                <TextBlock FontSize="11" Text="Go To Line" />
                                                            </StackPanel>
                                                        </Button>
                                                        <Button
                                                            x:Name="FindReplaceButton"
                                                            Grid.Column="2"
                                                            HorizontalAlignment="Stretch"
                                                            Click="FindReplace_Click"
                                                            IsEnabled="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}">
                                                            <StackPanel Spacing="4">
                                                                <FontIcon FontSize="14" Glyph="&#xE721;" />
                                                                <TextBlock FontSize="11" Text="Find/Replace" />
                                                            </StackPanel>
                                                        </Button>
                                                    </Grid>
                                                </StackPanel>
                                            </Border>

                                            <!--  Format Tools  -->
                                            <Border
                                                Padding="10"
                                                Background="#F8F9FA"
                                                CornerRadius="8">
                                                <StackPanel Spacing="12">
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Text="Format" />
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="8" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Button
                                                            x:Name="FormatDocumentButton"
                                                            Grid.Column="0"
                                                            HorizontalAlignment="Stretch"
                                                            Click="FormatDocument_Click"
                                                            IsEnabled="{x:Bind ViewModel.CanFormat, Mode=OneWay}">
                                                            <StackPanel Spacing="4">
                                                                <FontIcon FontSize="14" Glyph="&#xE8E2;" />
                                                                <TextBlock FontSize="11" Text="Format" />
                                                            </StackPanel>
                                                        </Button>
                                                        <Button
                                                            x:Name="MinifyDocumentButton"
                                                            Grid.Column="2"
                                                            HorizontalAlignment="Stretch"
                                                            Click="MinifyDocument_Click"
                                                            IsEnabled="{x:Bind ViewModel.CanMinify, Mode=OneWay}">
                                                            <StackPanel Spacing="4">
                                                                <FontIcon FontSize="14" Glyph="&#xE8CB;" />
                                                                <TextBlock FontSize="11" Text="Minify" />
                                                            </StackPanel>
                                                        </Button>
                                                    </Grid>
                                                </StackPanel>
                                            </Border>

                                            <!--  File Operations  -->
                                            <Border
                                                Padding="10"
                                                Background="#F8F9FA"
                                                CornerRadius="8">
                                                <StackPanel Spacing="12">
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Text="File Operations" />
                                                    <StackPanel Spacing="8">
                                                        <Button
                                                            x:Name="ExportFileButton"
                                                            HorizontalAlignment="Stretch"
                                                            Click="ExportFile_Click"
                                                            IsEnabled="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}">
                                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                                <FontIcon FontSize="14" Glyph="&#xE8C5;" />
                                                                <TextBlock
                                                                    FontSize="12"
                                                                    Text="Export SNBT"
                                                                    Visibility="{x:Bind ViewModel.SelectedChangedFile.IsTranslated, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                                                                <TextBlock
                                                                    FontSize="12"
                                                                    Text="Export File"
                                                                    Visibility="{x:Bind ViewModel.SelectedChangedFile.IsTranslated, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}" />
                                                            </StackPanel>
                                                        </Button>
                                                        <Button
                                                            x:Name="ImportFileButton"
                                                            HorizontalAlignment="Stretch"
                                                            Click="ImportFile_Click"
                                                            IsEnabled="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}">
                                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                                <FontIcon FontSize="14" Glyph="&#xE8B5;" />
                                                                <TextBlock
                                                                    FontSize="12"
                                                                    Text="Import SNBT"
                                                                    Visibility="{x:Bind ViewModel.SelectedChangedFile.IsTranslated, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                                                                <TextBlock
                                                                    FontSize="12"
                                                                    Text="Import File"
                                                                    Visibility="{x:Bind ViewModel.SelectedChangedFile.IsTranslated, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}" />
                                                            </StackPanel>
                                                        </Button>
                                                        <Button
                                                            x:Name="ReloadFromDiskButton"
                                                            HorizontalAlignment="Stretch"
                                                            Click="ReloadFromDisk_Click"
                                                            IsEnabled="{x:Bind ViewModel.SelectedChangedFile, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}">
                                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                                <FontIcon FontSize="14" Glyph="&#xE72C;" />
                                                                <TextBlock FontSize="12" Text="Reload from Disk" />
                                                            </StackPanel>
                                                        </Button>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>

                                            <!--  Syntax Highlighting  -->
                                            <Border
                                                Padding="10"
                                                Background="#F8F9FA"
                                                CornerRadius="8">
                                                <StackPanel Spacing="12">
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Text="View Options" />
                                                    <StackPanel Spacing="8">
                                                        <ToggleSwitch
                                                            x:Name="SyntaxHighlightingToggle"
                                                            Header="Syntax Highlighting"
                                                            IsEnabled="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                                                            IsOn="{x:Bind ViewModel.IsSyntaxHighlightingEnabled, Mode=TwoWay}" />
                                                        <ToggleSwitch
                                                            x:Name="LineNumbersToggle"
                                                            Header="Line Numbers"
                                                            IsEnabled="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                                                            IsOn="{x:Bind ViewModel.AreLineNumbersVisible, Mode=TwoWay}" />
                                                        <ToggleSwitch
                                                            x:Name="WordWrapToggle"
                                                            Header="Word Wrap"
                                                            IsEnabled="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                                                            IsOn="{x:Bind ViewModel.IsWordWrapEnabled, Mode=TwoWay}"
                                                            Toggled="WordWrapToggle_Toggled" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>

                                            <!--  Font Settings  -->
                                            <Border
                                                Padding="12"
                                                Background="#F8F9FA"
                                                CornerRadius="8">
                                                <StackPanel Spacing="12">
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Text="Font Settings" />
                                                    <StackPanel Spacing="8">
                                                        <ComboBox
                                                            x:Name="FontFamilyComboBox"
                                                            Width="220"
                                                            Header="Font Family"
                                                            IsEnabled="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                                                            SelectedItem="{x:Bind ViewModel.SelectedFontFamily, Mode=OneWay}"
                                                            SelectionChanged="FontFamilyComboBox_SelectionChanged">
                                                            <x:String>Consolas</x:String>
                                                            <x:String>Courier New</x:String>
                                                            <x:String>Cascadia Code</x:String>
                                                            <x:String>Cascadia Mono</x:String>
                                                            <x:String>Fira Code</x:String>
                                                        </ComboBox>
                                                        <ComboBox
                                                            x:Name="FontSizeComboBox"
                                                            Width="220"
                                                            Header="Font Size"
                                                            IsEnabled="{x:Bind ViewModel.SelectedChangedFile.EditorPath, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                                                            SelectedItem="{x:Bind ViewModel.EditorFontSize, Mode=OneWay}"
                                                            SelectionChanged="FontSizeComboBox_SelectionChanged">
                                                            <x:Double>8</x:Double>
                                                            <x:Double>9</x:Double>
                                                            <x:Double>10</x:Double>
                                                            <x:Double>11</x:Double>
                                                            <x:Double>12</x:Double>
                                                            <x:Double>13</x:Double>
                                                            <x:Double>14</x:Double>
                                                            <x:Double>15</x:Double>
                                                            <x:Double>16</x:Double>
                                                            <x:Double>17</x:Double>
                                                            <x:Double>18</x:Double>
                                                            <x:Double>19</x:Double>
                                                            <x:Double>20</x:Double>
                                                            <x:Double>21</x:Double>
                                                            <x:Double>22</x:Double>
                                                            <x:Double>23</x:Double>
                                                            <x:Double>24</x:Double>
                                                        </ComboBox>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>

                    <TextBlock
                        x:Name="AnalyticsContent"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="Analytics tab content - Coming soon"
                        Visibility="Collapsed" />

                    <!--  Settings Tab Content  -->
                    <Grid x:Name="SettingsContent" Visibility="Collapsed">
                        <Border Background="White" BorderBrush="#E1E1E1" BorderThickness="1" CornerRadius="8" Padding="16">
                            <StackPanel Spacing="16">
                                <TextBlock FontSize="18" FontWeight="SemiBold" Text="Save Settings" />
                                <StackPanel Spacing="8">
                                    <ToggleSwitch x:Name="AutoTranslateToggle"
                                                  Header="Auto-translate when world is idle"
                                                  IsOn="{x:Bind ViewModel.SaveInfo.AutoTranslateOnIdle, Mode=TwoWay}"
                                                  Toggled="AutoTranslateToggle_Toggled" />
                                    <TextBlock FontSize="12" Foreground="#666666" Text="When enabled, GitMC will translate changes automatically once the game releases file locks." />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
